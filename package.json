{
    "devDependencies": {
        "autoprefixer": "^10.4.20",
        "eslint": "^9.18.0",
        "postcss": "^8.5.1"
    },
    "dependencies": {
        "@tailwindcss/cli": "^4.0.0",
        "@tailwindcss/postcss": "^4.0.0",
        "tailwindcss": "^3.4.16"
    },
    "scripts": {
        "build:css": "npx tailwindcss@3.4.16 --config ./tailwind.config.js --input ./wwwroot/css/tailwind.css --output ./wwwroot/css/tailwind.min.css --minify",
