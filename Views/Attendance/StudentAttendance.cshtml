@using SchoolSystem.Models.ViewModels
@model List<StudentCheckViewModel>
@{
    ViewData["Title"] = "เช็คชื่อ";
    var subject = ViewData["Subject"];
    var classroom = ViewData["ClassRoom"];
    var date = ViewData["Date"] ?? DateTime.Now.ToString("dd/MM/yyyy");
}

<div class="max-w-6xl mx-auto bg-white shadow-xl rounded-lg p-8">
    <div class="flex justify-between items-center flex-wrap mb-8">
        <div>
            <h1 class="text-4xl font-extrabold text-gray-900">📋 เช็คชื่อนักเรียน</h1>
            <p class="text-gray-700 text-lg">วิชา: <span class="font-semibold">@subject</span>, ห้องเรียน: <span class="font-semibold">@classroom</span></p>
            <p class="text-gray-700 text-lg">วันที่: <span class="font-semibold">@date</span></p>
        </div>
        <a href="@Url.Action("ClassAttendance", "Attendance")"
           class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 transition-all hover:scale-105 shadow-md">
            <i class="fas fa-arrow-left mr-2"></i> ย้อนกลับ
        </a>
    </div>

    <div class="bg-gray-100 p-6 rounded-lg shadow-md">
        <!-- ตารางเช็คชื่อแบบเต็มจอ -->
        <table class="table-auto w-full border-collapse border border-gray-300 hidden lg:table">
            <thead class="bg-gray-300 text-gray-800">
                <tr>
                    <th class="border border-gray-400 px-4 py-3">ลำดับ</th>
                    <th class="border border-gray-400 px-4 py-3">รหัสนักเรียน</th>
                    <th class="border border-gray-400 px-4 py-3">ชื่อ</th>
                    <th class="border border-gray-400 px-4 py-3">นามสกุล</th>
                    <th class="border border-gray-400 px-4 py-3 text-center">สถานะ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr class="hover:bg-gray-200 transition-all">
                        <td class="border px-4 py-3">@student.Id</td>
                        <td class="border px-4 py-3">@student.StudentId</td>
                        <td class="border px-4 py-3">@student.FirstName</td>
                        <td class="border px-4 py-3">@student.LastName</td>
                        <td class="border px-4 py-3 text-center">
                            <div class="flex justify-center gap-3">
                                <button class="attendance-btn bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg shadow-md transition-all transform hover:scale-105"
                                        onclick="setStatus(this, 'มาเรียน')">
                                    ✔️ มาเรียน
                                </button>
                                <button class="attendance-btn bg-yellow-600 hover:bg-yellow-700 text-white px-4 py-2 rounded-lg shadow-md transition-all transform hover:scale-105"
                                        onclick="setStatus(this, 'มาสาย')">
                                    ⏳ มาสาย
                                </button>
                                <button class="attendance-btn bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg shadow-md transition-all transform hover:scale-105"
                                        onclick="setStatus(this, 'ไม่มา')">
                                    ❌ ไม่มา
                                </button>
                                <button class="attendance-btn bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg shadow-md transition-all transform hover:scale-105"
                                        onclick="setStatus(this, 'ลาเรียน')">
                                    📝 ลา
                                </button>
                            </div>
                            <p class="status-indicator text-sm font-semibold mt-3 text-gray-700"></p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Mobile Card Layout -->
        <div class="grid grid-cols-1 gap-4 lg:hidden">
            @foreach (var student in Model)
            {
                <div class="bg-white p-5 rounded-lg shadow-lg">
                    <p class="text-lg font-semibold text-gray-800">รหัส: @student.StudentId</p>
                    <p class="text-md text-gray-700">ชื่อ: @student.FirstName</p>
                    <p class="text-md text-gray-700">นามสกุล: @student.LastName</p>
                    <select class="w-full mt-3 p-3 border border-gray-400 rounded-lg bg-white shadow-sm text-gray-800" onchange="updateStatus(this)">
                        <option value="">เลือกสถานะ</option>
                        <option value="มาเรียน">✔️ มาเรียน</option>
                        <option value="มาสาย">⏳ มาสาย</option>
                        <option value="ไม่มา">❌ ไม่มา</option>
                        <option value="ลาเรียน">📝 ลา</option>
                    </select>
                    <p class="status-indicator-mobile text-md font-semibold mt-3 text-gray-700"></p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setStatus(button, status) {
            const row = button.closest('tr');
            const statusIndicator = row.querySelector('.status-indicator');
            statusIndicator.textContent = `สถานะ: ${status}`;
        }

        function updateStatus(select) {
            const row = select.closest('.bg-white');
            const statusIndicator = row.querySelector('.status-indicator-mobile');
            statusIndicator.textContent = `สถานะ: ${select.value}`;
        }
    </script>
}