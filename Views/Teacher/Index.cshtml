@model IEnumerable<SchoolSystem.Models.Course>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<div class="container mx-auto my-6 w-full max-w-3xl bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold mb-6 text-center">Course List</h2>

    <!-- Tabs -->
    <div class="border-b border-gray-200 mb-6">
        <nav class="flex justify-center gap-6">
            <a asp-controller="Teacher" asp-action="EditById" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">Id Edit</a>
            <a asp-controller="Teacher" asp-action="CanceledCourses" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">Canceled Courses</a>
            <a asp-controller="Teacher" asp-action="Create" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">New Course</a>
            <a asp-controller="Teacher" asp-action="Details" class="p-3 text-sm font-medium text-sky-600 border-b-2 border-sky-600">Notifications</a>
        </nav>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto">
        <table class="w-full text-center divide-y divide-gray-200">
            <thead>
                <tr>
                    <th class="px-4 py-2 font-medium text-gray-900">Name</th>
                    <th class="px-4 py-2 font-medium text-gray-900">CourseID</th>
                    <th class="px-4 py-2 font-medium text-gray-900">Units</th>
                    <th class="px-4 py-2 font-medium text-gray-900">Category</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var Course in Model)
                {
                    <tr>
                        <td class="border border-gray-300 px-4 py-2">
                            <a asp-action="Details" asp-route-id="@Course.CourseID" class="text-blue-600 hover:underline">
                                @Course.CourseName
                            </a>
                        </td>
                        <td class="border border-gray-300 px-4 py-2">@Course.CourseCode</td>
                        <td class="border border-gray-300 px-4 py-2">@Course.Units</td>
                        <td class="border border-gray-300 px-4 py-2">@Course.Category</td>
                        <td class="border border-gray-300 px-4 py-2">
                            <a asp-action="Edit" asp-route-id="@Course.CourseID" class="text-indigo-600 hover:underline">
                                Edit
                            </a>
                        </td>
                        <td class="border border-gray-300 px-4 py-2">
                            <a asp-action="CancelCourse" asp-route-id="@Course.CourseID" class="text-red-600 hover:underline">Cancel</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

