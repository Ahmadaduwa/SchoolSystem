@{
    ViewData["Title"] = "Search Student by ID";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Student</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<div class="container mx-auto my-6 w-full max-w-3xl bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold mb-4">Search Student by ID</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="text-red-500 mb-4">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="EditById" method="post" class="space-y-4">
        <div>
            <label for="id" class="block text-sm font-medium text-gray-700">Student ID</label>
            <input type="number" id="id" name="id" class="w-full border border-gray-300 rounded px-2 py-1" required />
        </div>

        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded shadow">
            Search
        </button>
    </form>


    <h2 class="text-2xl font-bold mb-4">Search Course by Code</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="text-red-500 mb-4">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="EditByCourseCode" method="post" class="space-y-4">
        <div>
            <label for="CourseCode" class="block text-sm font-medium text-gray-700">Course Code</label>
            <input type="text" id="CourseCode" name="CourseCode" class="w-full border border-gray-300 rounded px-2 py-1" required />
        </div>

        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded shadow">
            Search
        </button>
    </form>
</div>
