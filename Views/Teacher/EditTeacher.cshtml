@model SchoolSystem.ViewModels.TeacherViewEditModel
@{
    ViewData["Title"] = "Edit Teacher";
}

<div class="container mx-auto max-w-4xl p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold text-center text-gray-700 mb-4">Edit Teacher</h2>

    <form asp-action="EditTeacher" method="post">
        <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div>

        <!-- Hidden fields สำหรับ TeacherId และ ProfileId -->
        <input type="hidden" asp-for="TeacherId" />
        <input type="hidden" asp-for="ProfileId" />

        <!-- Account Information -->
        <fieldset class="border p-4 rounded-lg mb-4">
            <legend class="text-lg font-bold">Account Information</legend>

            <label asp-for="Email" class="block">Email:</label>
            <input asp-for="Email" class="border rounded w-full p-2 mb-4" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>

            <label asp-for="Username" class="block">Username:</label>
            <input asp-for="Username" class="border rounded w-full p-2 mb-4" />
            <span asp-validation-for="Username" class="text-red-500 text-sm"></span>

            <label asp-for="Password" class="block">Password:</label>
            <input asp-for="Password" type="password" class="border rounded w-full p-2 mb-4" placeholder="Leave blank to keep current password" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>

            <label asp-for="ConfirmPassword" class="block">Confirm Password:</label>
            <input asp-for="ConfirmPassword" type="password" class="border rounded w-full p-2 mb-4" placeholder="Leave blank to keep current password" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </fieldset>

        <!-- Profile Information -->
        <fieldset class="border p-4 rounded-lg mb-4">
            <legend class="text-lg font-bold">Profile Information</legend>

            <label asp-for="FirstName" class="block">First Name:</label>
            <input asp-for="FirstName" class="border rounded w-full p-2 mb-4" />
            <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>

            <label asp-for="LastName" class="block">Last Name:</label>
            <input asp-for="LastName" class="border rounded w-full p-2 mb-4" />
            <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>

            <label asp-for="Gender" class="block">Gender:</label>
            <select asp-for="Gender" class="border rounded w-full p-2 mb-4">
                <option value="Not Specified">Not Specified</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Gender" class="text-red-500 text-sm"></span>

            <label asp-for="Address" class="block">Address:</label>
            <input asp-for="Address" class="border rounded w-full p-2 mb-4" />
            <span asp-validation-for="Address" class="text-red-500 text-sm"></span>

            <label asp-for="DateOfBirth" class="block">Date of Birth:</label>
            <input asp-for="DateOfBirth" type="date" class="border rounded w-full p-2 mb-4" />
            <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>

            <label asp-for="ProfilePictureUrl" class="block">Profile Picture URL:</label>
            <input asp-for="ProfilePictureUrl" class="border rounded w-full p-2 mb-4" />
            <span asp-validation-for="ProfilePictureUrl" class="text-red-500 text-sm"></span>
        </fieldset>

        <!-- Teacher Information -->
        <fieldset class="border p-4 rounded-lg mb-4">
            <legend class="text-lg font-bold">Teacher Information</legend>

            <label asp-for="DepartmentId" class="block">Department:</label>
            <select asp-for="DepartmentId" class="border rounded w-full p-2 mb-4" asp-items="Model.Departments">
                <option value="">Select Department (Optional)</option>
            </select>
            <span asp-validation-for="DepartmentId" class="text-red-500 text-sm"></span>

            <label asp-for="HireDate" class="block">Hire Date:</label>
            <input asp-for="HireDate" type="date" class="border rounded w-full p-2 mb-4" />
            <span asp-validation-for="HireDate" class="text-red-500 text-sm"></span>

            <label asp-for="Salary" class="block">Salary:</label>
            <input asp-for="Salary" type="number" step="0.01" class="border rounded w-full p-2 mb-4" />
            <span asp-validation-for="Salary" class="text-red-500 text-sm"></span>

            <label asp-for="Status" class="block">Status:</label>
            <input asp-for="Status" class="border rounded w-full p-2 mb-4" />
            <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
        </fieldset>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-400">
            Save Changes
        </button>
    </form>

    <!-- ปุ่มย้อนกลับและ Delete (อยู่ภายนอกฟอร์มหลัก) -->
    <div class="mt-4 flex justify-between">
        <a asp-action="IndexTeacher" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-400">
            Back
        </a>

        <!-- ฟอร์มสำหรับ Delete Teacher -->
        <form asp-action="DeleteTeacher" method="post" onsubmit="return confirm('Are you sure you want to delete this teacher?');" asp-route-id="@Model.TeacherId">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="TeacherId"/>
            <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-400">
                Delete
            </button>
        </form>
    </div>
</div>
