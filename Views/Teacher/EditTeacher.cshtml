@model SchoolSystem.Models.UserManagement.Teacher
@{
    ViewData["Title"] = "Edit Teacher";
}

<div class="container mx-auto max-w-4xl p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold text-center text-gray-700 mb-4">Edit Teacher</h2>

    <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div>

    <!-- ✅ แก้ไขข้อมูลครู -->
    <form asp-action="EditTeacher" method="post">
        <input type="hidden" asp-for="TeacherId" />
        <input type="hidden" asp-for="Profile.ProfileId" />

        <fieldset class="border p-4 rounded-lg mb-4">
            <legend class="text-lg font-bold">Profile Information</legend>

            <label class="block">First Name:</label>
            <input asp-for="Profile.FirstName" class="border rounded w-full p-2 mb-4" required />
            <span asp-validation-for="Profile.FirstName" class="text-red-500 text-sm"></span>

            <label class="block">Last Name:</label>
            <input asp-for="Profile.LastName" class="border rounded w-full p-2 mb-4" required />
            <span asp-validation-for="Profile.LastName" class="text-red-500 text-sm"></span>

            <label class="block">Gender:</label>
            <select asp-for="Profile.Gender" class="border rounded w-full p-2 mb-4">
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </select>

            <label class="block">Address:</label>
            <input asp-for="Profile.Address" class="border rounded w-full p-2 mb-4" />

            <label class="block">Date of Birth:</label>
            <input asp-for="Profile.DateOfBirth" type="date" class="border rounded w-full p-2 mb-4" required />
        </fieldset>

        <fieldset class="border p-4 rounded-lg mb-4">
            <legend class="text-lg font-bold">Teacher Information</legend>

            <label class="block">Department ID:</label>
            <input asp-for="DepartmentId" class="border rounded w-full p-2 mb-4" />

            <label class="block">Hire Date:</label>
            <input asp-for="HireDate" type="date" class="border rounded w-full p-2 mb-4" required />

            <label class="block">Salary:</label>
            <input asp-for="Salary" type="number" step="0.01" class="border rounded w-full p-2 mb-4" required />
        </fieldset>

        <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-400">
            Save Changes
        </button>
    </form>

    <!-- ✅ ปุ่มลบ แยกฟอร์มออกจากกัน -->
    <form asp-action="DeleteTeacher" asp-controller="Teacher" method="post" class="mt-4"
          onsubmit="return confirm('Are you sure you want to delete this teacher?');">
        <input type="hidden" name="id" value="@Model.TeacherId" />
        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-500">
            Delete
        </button>
    </form>
</div>
