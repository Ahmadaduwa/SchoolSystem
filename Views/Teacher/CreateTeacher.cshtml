@model SchoolSystem.ViewModels.TeacherViewModel
@{
    ViewData["Title"] = "สร้างครู";
}

<div class="container mx-auto max-w-4xl p-6 bg-white shadow-md rounded-lg">
    <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">สร้างครู</h2>

    <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

    <form asp-action="CreateTeacher" method="post" enctype="multipart/form-data" class="space-y-6">
        <fieldset class="border p-4 rounded-lg">
            <legend class="text-lg font-bold px-2">ข้อมูลบัญชี</legend>
            <div class="space-y-4">
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">อีเมล:</label>
                    <input asp-for="Email" type="email" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700">ชื่อผู้ใช้:<span class="text-red-500">*</span></label>
                    <input asp-for="Username" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                    <span asp-validation-for="Username" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">รหัสผ่าน:<span class="text-red-500">*</span></label>
                    <input asp-for="Password" type="password" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                    <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">ยืนยันรหัสผ่าน:<span class="text-red-500">*</span></label>
                    <input asp-for="ConfirmPassword" type="password" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs"></span>
                </div>
            </div>
        </fieldset>

        <fieldset class="border p-4 rounded-lg">
            <legend class="text-lg font-bold px-2">ข้อมูลโปรไฟล์</legend>
            <div class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700">ชื่อ:<span class="text-red-500">*</span></label>
                        <input asp-for="FirstName" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                        <span asp-validation-for="FirstName" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700">นามสกุล:<span class="text-red-500">*</span></label>
                        <input asp-for="LastName" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                        <span asp-validation-for="LastName" class="text-red-500 text-xs"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Gender" class="block text-sm font-medium text-gray-700">เพศ:</label>
                    <select asp-for="Gender" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
                        <option value="Not Specified">ไม่ระบุ</option>
                        <option value="Male">ชาย</option>
                        <option value="Female">หญิง</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Address" class="block text-sm font-medium text-gray-700">ที่อยู่:</label>
                    <textarea asp-for="Address" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" rows="3"></textarea>
                    <span asp-validation-for="Address" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="DateOfBirth" class="block text-sm font-medium text-gray-700">วันเกิด (เดือน/วันที่/ปี คศ.):</label>
                    <input asp-for="DateOfBirth" type="date" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                    <span asp-validation-for="DateOfBirth" class="text-red-500 text-xs"></span>
                </div>

                <!-- เพิ่มส่วนอัพโหลดรูปโปรไฟล์ -->
                <div>
                    <label asp-for="ProfilePicture" class="block text-sm font-medium text-gray-700">รูปโปรไฟล์:</label>
                    <input asp-for="ProfilePicture" type="file" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                    <span asp-validation-for="ProfilePicture" class="text-red-500 text-xs"></span>
                </div>
            </div>
        </fieldset>

        <fieldset class="border p-4 rounded-lg">
            <legend class="text-lg font-bold px-2">ข้อมูลครู</legend>
            <div class="space-y-4">
                <div>
                    <label asp-for="DepartmentId" class="block text-sm font-medium text-gray-700">แผนก:<span class="text-red-500">*</span></label>
                    <select asp-for="DepartmentId" asp-items="Model.Departments" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
                        <option value="">ทุกแผนก</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-red-500 text-xs"></span>
                    <p class="text-gray-500 text-xs mt-1">การเลือกแผนกเป็นทางเลือก</p>
                </div>

                <div>
                    <label asp-for="HireDate" class="block text-sm font-medium text-gray-700">วันที่เริ่มงาน (เดือน/วันที่/ปี คศ.):</label>
                    <input asp-for="HireDate" type="date" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                    <span asp-validation-for="HireDate" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Salary" class="block text-sm font-medium text-gray-700">เงินเดือน:</label>
                    <input asp-for="Salary" type="number" step="0.01" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
                    <span asp-validation-for="Salary" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Status" class="block text-sm font-medium text-gray-700">สถานะ:</label>
                    <select asp-for="Status" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                        <option value="On Leave">On Leave</option>
                    </select>
                    <span asp-validation-for="Status" class="text-red-500 text-xs"></span>
                </div>
            </div>
        </fieldset>

        <div class="flex justify-between">
            <a asp-action="IndexTeacher" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">กลับไปที่รายการ</a>
            <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-500">สร้างครู</button>
        </div>
    </form>
</div>
