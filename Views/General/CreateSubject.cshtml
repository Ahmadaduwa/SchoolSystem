@model SchoolSystem.Models.ClassManagement.Subject

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="container mx-auto my-6 w-full max-w-3xl bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-6 text-center">Create Subject</h2>

        <div class="border-b border-gray-200 mb-6">
            <nav class="flex justify-center gap-6">
                <a asp-controller="General" asp-action="CreateSubject" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">Create</a>
                <a asp-controller="General" asp-action="IndexSubject" class="p-3 text-sm font-medium text-sky-600 border-b-2 border-sky-600">List</a>
            </nav>
        </div>

        <form asp-action="CreateSubject" method="post" class="space-y-4">
            <div>
                <label asp-for="SubjectCode" class="block text-sm font-medium text-gray-700">Subject Code</label>
                <input asp-for="SubjectCode" type="text" class="border border-gray-300 rounded px-2 py-1 w-full" />
                <span asp-validation-for="SubjectCode" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="SubjectName" class="block text-sm font-medium text-gray-700">Subject Name</label>
                <input asp-for="SubjectName" type="text" class="border border-gray-300 rounded px-2 py-1 w-full" />
                <span asp-validation-for="SubjectName" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea asp-for="Description" class="border border-gray-300 rounded px-2 py-1 w-full"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="SubjectCategoryId" class="block text-sm font-medium text-gray-700">Category</label>
                <select asp-for="SubjectCategoryId" class="border border-gray-300 rounded px-2 py-1 w-full" asp-items="ViewBag.SubjectCategories"></select>
                <span asp-validation-for="SubjectCategoryId" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Status" class="block text-sm font-medium text-gray-700">Status</label>
                <select asp-for="Status" class="border border-gray-300 rounded px-2 py-1 w-full">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
            </div>


            <div class="flex justify-end gap-4">
                <a asp-action="IndexSubject" class="inline-block rounded border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100">Back</a>
                <button type="submit" class="inline-block rounded bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-500">Save</button>
            </div>
        </form>
    </div>
</body>
