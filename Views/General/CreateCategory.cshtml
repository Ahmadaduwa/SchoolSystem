@model SchoolSystem.Models.ClassManagement.SubjectCategory

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>  Subject Category   </title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="container mx-auto my-6 w-full max-w-3xl bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-6 text-center">   Create Subject Category    </h2>

        <div class="border-b border-gray-200 mb-6">
            <nav class="flex justify-center gap-6">

                <a asp-controller="General" asp-action="CreateCategory" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">Create</a>
                <a asp-controller="General" asp-action="IndexCategory" class="p-3 text-sm font-medium text-sky-600 border-b-2 border-sky-600">List</a>

            </nav>
        </div>
        <div class="container mx-auto my-6 w-full max-w-3xl bg-white rounded-lg shadow-lg p-6">
            <h2 class="text-2xl font-bold mb-6 text-center">Create </h2>


            <form asp-action="CreateCategory" method="post" class="space-y-4">

                <div>
                    <label asp-for="CategoryName" class="block text-sm font-medium text-gray-700">Category Name</label>
                    <input asp-for="CategoryName" type="text" class="input-field border border-gray-300 rounded px-2 py-1 w-full" />
                    <span asp-validation-for="CategoryName" class="text-red-500 text-sm"></span>
                </div>


                <div>
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
                    <textarea asp-for="Description" class="textarea-field border border-gray-300 rounded px-2 py-1 w-full"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>
                <div class="flex justify-end gap-4">
                    <a asp-action="Index" class="inline-block rounded border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100">Back</a>
                    <button type="submit" class="inline-block rounded bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-500">Submit</button>
                </div>
            </form>

        </div>
    </div>
</body>

