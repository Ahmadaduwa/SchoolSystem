@model SchoolSystem.Models.ClassManagement.Teacher

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Teacher</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>


<h2>Delete Teacher</h2>

<p>Are you sure you want to delete the following teacher?</p>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.UserId</dd>
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.DepartmentId</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="TeacherID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
