@model SchoolSystem.Models.ClassManagement.ClassSchedule

        

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>   Create Schedule  </title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="container mx-auto my-6 w-full max-w-3xl bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-6 text-center">   Create Schedule    </h2>

        <div class="border-b border-gray-200 mb-6">
            <nav class="flex justify-center gap-6">

                <a asp-controller="General" asp-action="CreateSchedule" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">Create</a>
                <a asp-controller="General" asp-action="IndexSchedule" class="p-3 text-sm font-medium text-sky-600 border-b-2 border-sky-600">List</a>

            </nav>
        </div>
        <div class="container mx-auto my-6 w-full max-w-3xl bg-white rounded-lg shadow-lg p-6">
            <h2 class="text-2xl font-bold mb-6 text-center">Create </h2>


            <form asp-action="CreateSchedule" method="post" class="space-y-4">

                <div>
                    <label asp-for="CM_ID" class="block text-sm font-medium text-gray-700">Class Management</label>
                    <select asp-for="CM_ID" class="border border-gray-300 rounded px-2 py-1 w-full" asp-items="ViewBag.ClassManagements"></select>
                </div>

                <div>
                    <label asp-for="DayOfWeek" class="block text-sm font-medium text-gray-700">Day of Week</label>
                    <select asp-for="DayOfWeek" class="border border-gray-300 rounded px-2 py-1 w-full">
                        <option value="Monday">Monday</option>
                        <option value="Tuesday">Tuesday</option>
                        <option value="Wednesday">Wednesday</option>
                        <option value="Thursday">Thursday</option>
                        <option value="Friday">Friday</option>
                        <option value="Saturday">Saturday</option>
                        <option value="Sunday">Sunday</option>
                    </select>
                    <span asp-validation-for="DayOfWeek" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="StartTime" class="block text-sm font-medium text-gray-700">Start Time</label>
                    <input asp-for="StartTime" type="time" class="border border-gray-300 rounded px-2 py-1 w-full" />
                    <span asp-validation-for="StartTime" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="EndTime" class="block text-sm font-medium text-gray-700">End Time</label>
                    <input asp-for="EndTime" type="time" class="border border-gray-300 rounded px-2 py-1 w-full" />
                    <span asp-validation-for="EndTime" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Status" class="block text-sm font-medium text-gray-700">Status</label>
                    <select asp-for="Status" class="border border-gray-300 rounded px-2 py-1 w-full">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
                </div>


                <div class="flex justify-end gap-4 mt-4">
                    <a asp-action="IndexSchedule" class="inline-block rounded border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100">Back</a>
                    <button type="submit" class="inline-block rounded bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-500">Submit</button>
                </div>
            </form>

        </div>
    </div>
</body>
