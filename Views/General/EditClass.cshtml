@model SchoolSystem.Models.ClassManagement.Class


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Class</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<div class="container mx-auto my-6">
    <h2 class="text-2xl font-bold mb-4">Edit Class</h2>
    <div class="border-b border-gray-200 mb-6">
        <nav class="flex justify-center gap-6">
            <a asp-controller="General" asp-action="EditByIdCourse" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">EditByIdCrouse</a>
            <a asp-controller="General" asp-action="CanceledCourses" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">Canceled Courses</a>
            <a asp-controller="General" asp-action="CreateClass" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">CreateClass</a>
            <a asp-controller="General" asp-action="CreateCourse" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">CreateCourse</a>
            <a asp-controller="General" asp-action="IndexCourse" class="p-3 text-sm font-medium text-sky-600 border-b-2 border-sky-600">DetailsClass</a>
            <a asp-controller="General" asp-action="IndexClass" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">DetailsCourse</a>

        </nav>
    </div>

    <form asp-action="EditClass" method="post" class="space-y-4">
        <input asp-for="ClassID" type="hidden" />

        <div class="form-group">
            <label asp-for="ClassName" class="form-label">Class Name</label>
            <input asp-for="ClassName" class="form-control" />
            <span asp-validation-for="ClassName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GradeLevelId" class="form-label">Grade Level</label>
            <input asp-for="GradeLevelId" class="form-control" />
            <span asp-validation-for="GradeLevelId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Capacity" class="form-label">Capacity</label>
            <input asp-for="Capacity" type="number" class="form-control" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
