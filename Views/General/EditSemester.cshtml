@model SchoolSystem.Models.ClassManagement.Semester


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>


<h2>Edit Semester</h2>

<div class="border-b border-gray-200 mb-6">
    <nav class="flex justify-center gap-6">

        <a asp-controller="General" asp-action="CreateTeacher" class="p-3 text-sm font-medium text-gray-500 hover:text-gray-700">Create</a>
        <a asp-controller="General" asp-action="IndexTeacher" class="p-3 text-sm font-medium text-sky-600 border-b-2 border-sky-600">Index</a>

    </nav>
</div>

<form asp-action="EditSemester" method="post">
    <input type="hidden" asp-for="SemesterID" />
    <div class="form-group">
        <label asp-for="SemesterYear"></label>
        <input asp-for="SemesterYear" class="form-control" />
        <span asp-validation-for="SemesterYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SemesterNumber"></label>
        <input asp-for="SemesterNumber" class="form-control" />
        <span asp-validation-for="SemesterNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" type="date" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" type="date" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>
