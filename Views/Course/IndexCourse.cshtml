@model IEnumerable<SchoolSystem.Models.CourseManagement.Course>
@{
    ViewData["Title"] = "Course List";
}

<div class="container mx-auto my-6 w-full max-w-4xl bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold mb-6 text-center">Courses</h2>

    <!-- แสดงการแจ้งเตือน (Success/Error) -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="p-4 mb-4 text-green-700 bg-green-200 rounded">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="p-4 mb-4 text-red-700 bg-red-200 rounded">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="flex justify-between mb-4">
        <a asp-action="CreateCourse" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-500">+ Create Course</a>
    </div>

    <table class="w-full border-collapse border border-gray-300">
        <thead>
            <tr class="bg-gray-200">
                <th class="border p-2">Course Code</th>
                <th class="border p-2">Course Name</th>
                <th class="border p-2">Category</th>
                <th class="border p-2 text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td class="border p-2">@course.Course_Code</td>
                    <td class="border p-2">@course.CourseName</td>
                    <td class="border p-2">@course.CourseCategory?.Name</td>
                    <td class="border p-2 text-center">
                        <a asp-action="EditCourse" asp-route-id="@course.CourseId" class="bg-blue-600 text-white px-3 py-1 rounded-lg hover:bg-blue-500">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
