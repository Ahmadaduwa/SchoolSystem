@model IEnumerable<SchoolSystem.Models.CourseManagement.CourseCategory>
@{
    ViewData["Title"] = "Subject Categories";
}

<div class="container mx-auto my-6 w-full max-w-4xl bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold mb-6 text-center">Course Categories</h2>

    <!-- แสดงข้อความแจ้งเตือน -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="p-4 mb-4 text-green-700 bg-green-200 rounded">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="p-4 mb-4 text-red-700 bg-red-200 rounded">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="flex justify-between mb-4">
        <a asp-action="CreateCategory" asp-controller="Category" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-500">+ Create Category</a>
    </div>

    <table class="w-full border-collapse border border-gray-300">
        <thead>
            <tr class="bg-gray-200">
                <th class="border p-2">Category Name</th>
                <th class="border p-2">Description</th>
                <th class="border p-2 text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td class="border p-2">@category.Name</td>
                    <td class="border p-2">@category.Description</td>
                    <td class="border p-2 text-center flex justify-center gap-2">
                        <a asp-action="EditCategory" asp-route-id="@category.CourseCategoryId" class="bg-blue-600 text-white px-3 py-1 rounded-lg hover:bg-blue-500">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
