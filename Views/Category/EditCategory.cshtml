@model SchoolSystem.Models.CourseManagement.CourseCategory
@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mx-auto my-6 w-full max-w-3xl bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold mb-4 text-center">Edit Category</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="p-4 mb-4 text-green-700 bg-green-200 rounded">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="p-4 mb-4 text-red-700 bg-red-200 rounded">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="EditCategory" method="post" class="space-y-4">
        <input asp-for="CourseCategoryId" type="hidden" />

        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700">Category Name</label>
            <input asp-for="Name" type="text" class="border border-gray-300 rounded px-2 py-1 w-full" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
            <textarea asp-for="Description" class="border border-gray-300 rounded px-2 py-1 w-full"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-between gap-4">
            <a asp-action="IndexCategory" class="inline-block rounded border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100">Back</a>
            <button type="submit" class="inline-block rounded bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-500">Save Changes</button>
        </div>
    </form>

    <!-- ปุ่ม Delete พร้อม Confirm -->
    <form asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@Model.CourseCategoryId" method="post" class="mt-4">
        <input type="hidden" asp-for="CourseCategoryId" />
        <button type="submit" class="w-full rounded bg-red-600 px-4 py-2 text-sm font-medium text-white hover:bg-red-500"
                onclick="return confirm('Are you sure you want to delete this category?');">
            Delete Category
        </button>
    </form>
</div>
