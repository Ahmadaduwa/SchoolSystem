@model IEnumerable<SchoolSystem.Models.ClassManagement.Class>
@{
    ViewData["Title"] = "Class List";
}

<div class="container mx-auto my-6 w-full max-w-4xl bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold mb-6 text-center">Class List</h2>

    <div class="flex justify-between mb-4">
        <a asp-action="CreateClass" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-500">+ Create Class</a>
    </div>

    <table class="w-full border-collapse border border-gray-300">
        <thead>
            <tr class="bg-gray-200">
                <th class="border p-2">Class Number</th>
                <th class="border p-2">Capacity</th>
                <th class="border p-2">Grade Level</th>
                <th class="border p-2">Created At</th>
                <th class="border p-2 text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="border p-2">@item.ClassNumber</td>
                    <td class="border p-2">@item.Capacity</td>
                    <td class="border p-2">@item.GradeLevels?.Name</td>
                    <td class="border p-2">@item.CreateAt.ToString("yyyy-MM-dd")</td>
                    <td class="border p-2 text-center flex justify-center gap-2">
                        <a asp-action="EditClass" asp-route-id="@item.ClassId" class="bg-blue-600 text-white px-3 py-1 rounded-lg hover:bg-blue-500">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
