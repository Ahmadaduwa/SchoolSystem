@model SchoolSystem.Models.ClassManagement.ClassManagement

<div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto bg-white shadow-xl rounded-xl overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-50 to-blue-50 px-6 py-5 border-b border-gray-200">
            <h2 class="text-3xl font-extrabold text-gray-900">Edit Class Management</h2>
        </div>
        <form asp-action="EditManage" method="post" class="p-6 space-y-6">
            <input type="hidden" asp-for="CM_Id" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="ClassId" class="block text-sm font-semibold text-gray-700 mb-2">
                        Class (Grade Level / Class Number)
                    </label>
                    <select asp-for="ClassId" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                        <option value="">-- Select Class --</option>
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Classes"])
                        {
                            <option value="@item.Value")>@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="ClassId" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="TeacherId" class="block text-sm font-semibold text-gray-700 mb-2">
                        Teacher
                    </label>
                    <select asp-for="TeacherId" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                        <option value="">-- Select Teacher --</option>
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Teachers"])
                        {
                            <option value="@item.Value")>@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="TeacherId" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="CourseId" class="block text-sm font-semibold text-gray-700 mb-2">
                        Course
                    </label>
                    <select asp-for="CourseId" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                        <option value="">-- Select Course --</option>
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Courses"])
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="CourseId" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="SemesterId" class="block text-sm font-semibold text-gray-700 mb-2">
                        Semester
                    </label>
                    <select asp-for="SemesterId" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                        <option value="">-- Select Semester --</option>
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Semesters"])
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="SemesterId" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div>
                <label asp-for="ScoringCriteria" class="block text-sm font-semibold text-gray-700 mb-2">
                    Scoring Criteria
                </label>
                <textarea asp-for="ScoringCriteria" class="w-full px-3 py-2 border border-gray-300 rounded-md h-32" placeholder="Enter scoring criteria (optional)"></textarea>
                <span asp-validation-for="ScoringCriteria" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="CheckCount" class="block text-sm font-semibold text-gray-700 mb-2">
                    Check Count
                </label>
                <input asp-for="CheckCount" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100 cursor-not-allowed" readonly />
                <span asp-validation-for="CheckCount" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Status" class="block text-sm font-semibold text-gray-700 mb-2">
                    Status
                </label>
                <select asp-for="Status" class="w-full px-3 py-2 border border-gray-300 rounded-md">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-red-600 text-sm"></span>
            </div>

            <div class="bg-gray-50 border border-gray-200 rounded-md p-4 mt-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <span class="text-gray-600 block mb-1">Created At</span>
                        <p class="font-medium text-gray-800">
                            @(Model.CreateAt.ToString("dd MMM yyyy HH:mm"))
                        </p>
                    </div>
                    <div>
                        <span class="text-gray-600 block mb-1">Last Updated</span>
                        <p class="font-medium text-gray-800">
                            @(Model.UpdateAt.ToString("dd MMM yyyy HH:mm"))
                        </p>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-between mt-6">
                <div>
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-md">
                        Save Changes
                    </button>
                    <a asp-action="Index" class="ml-4 text-gray-600 hover:text-gray-900">Cancel</a>
                </div>
                <a asp-action="Details" asp-route-id="@Model.CM_Id" class="text-indigo-600 hover:text-indigo-800 hover:underline">
                    View Details
                </a>
            </div>
        </form>
    </div>
</div>
