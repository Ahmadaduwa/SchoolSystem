@model SchoolSystem.Models.ClassManagement.ClassManagement

<div class="container mx-auto px-4 py-4 sm:py-8">
    <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-50 to-blue-50 px-4 sm:px-6 py-4 sm:py-5 border-b border-gray-200">
            <h2 class="text-2xl sm:text-3xl font-extrabold text-gray-900">แกไข้การเรียนการสอน</h2>
        </div>
        <form asp-action="EditManage" method="post" class="p-4 sm:p-6 space-y-4 sm:space-y-6">
            <input type="hidden" asp-for="CM_Id" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
                <div class="space-y-2">
                    <label asp-for="ClassId" class="block text-sm font-semibold text-gray-700">
                        ชั้นเรียน <span class="text-red-500">*</span> (ระดับชั้น / เลขที่ห้อง)
                    </label>
                    <select asp-for="ClassId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                        <option value="">-- Select Class --</option>
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Classes"])
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="ClassId" class="text-red-600 text-xs sm:text-sm"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="TeacherId" class="block text-sm font-semibold text-gray-700">
                        ครูผู้สอน <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="TeacherId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                        <option value="">-- Select Teacher --</option>
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Teachers"])
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="TeacherId" class="text-red-600 text-xs sm:text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
                <div class="space-y-2">
                    <label asp-for="CourseId" class="block text-sm font-semibold text-gray-700">
                        วิชา <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="CourseId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                        <option value="">-- Select Course --</option>
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Courses"])
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="CourseId" class="text-red-600 text-xs sm:text-sm"></span>
                </div>

                <div class="space-y-2">
                    <label asp-for="SemesterId" class="block text-sm font-semibold text-gray-700">
                        ภาคการศึกษา <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="SemesterId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                        <option value="">-- Select Semester --</option>
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Semesters"])
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="SemesterId" class="text-red-600 text-xs sm:text-sm"></span>
                </div>
            </div>

            <div class="space-y-2">
                <label asp-for="ScoringCriteria" class="block text-sm font-semibold text-gray-700">
                    เกณฑ์การให้คะแนน
                </label>
                <textarea asp-for="ScoringCriteria" class="w-full px-3 py-2 border border-gray-300 rounded-md h-24 sm:h-32 focus:ring-indigo-500 focus:border-indigo-500" placeholder="Enter scoring criteria (optional)"></textarea>
                <span asp-validation-for="ScoringCriteria" class="text-red-600 text-xs sm:text-sm"></span>
            </div>

            <div class="space-y-2">
                <label asp-for="CheckCount" class="block text-sm font-semibold text-gray-700">
                    จำนวนการเช็คชื่อ
                </label>
                <input asp-for="CheckCount" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100 cursor-not-allowed" readonly />
                <span asp-validation-for="CheckCount" class="text-red-600 text-xs sm:text-sm"></span>
            </div>

            <div class="space-y-2">
                <label asp-for="Status" class="block text-sm font-semibold text-gray-700">
                    Status
                </label>
                <select asp-for="Status" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-red-600 text-xs sm:text-sm"></span>
            </div>

            <div class="bg-gray-50 border border-gray-200 rounded-md p-3 sm:p-4 mt-2 sm:mt-4">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
                    <div>
                        <span class="text-gray-600 text-xs sm:text-sm block mb-1">สร้างเมื่อ</span>
                        <p class="font-medium text-gray-800 text-sm sm:text-base">
                            @(Model.CreateAt.ToString("dd MMM yyyy HH:mm"))
                        </p>
                    </div>
                    <div>
                        <span class="text-gray-600 text-xs sm:text-sm block mb-1">อัพเดทล่าสุดเมื่อ</span>
                        <p class="font-medium text-gray-800 text-sm sm:text-base">
                            @(Model.UpdateAt.ToString("dd MMM yyyy HH:mm"))
                        </p>
                    </div>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between pt-2 sm:pt-4">
                <div class="flex flex-col sm:flex-row items-start sm:items-center mb-4 sm:mb-0">
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 sm:px-6 rounded-md w-full sm:w-auto mb-2 sm:mb-0">
                        บันทึกการเปลี่ยนแปลง
                    </button>
                    <a asp-action="Index" class="text-center sm:text-left text-gray-600 hover:text-gray-900 mt-2 sm:mt-0 sm:ml-4">ยกเลิก</a>
                </div>
                <a asp-action="Details" asp-route-id="@Model.CM_Id" class="text-indigo-600 hover:text-indigo-800 hover:underline text-center sm:text-right mt-3 sm:mt-0">
                    รายละเอียด
                </a>
            </div>
        </form>
    </div>
</div>