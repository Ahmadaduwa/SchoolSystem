@model SchoolSystem.Models.ClassManagement.ClassManagement

@{
    ViewData["Title"] = "สร้างการจัดการเรียนการสอน";
}

<div class="container mx-auto px-2 sm:px-4 py-4 sm:py-8">
    <div class="bg-white shadow-md rounded-lg p-4 sm:p-6 md:p-8">
        <h2 class="text-xl sm:text-2xl md:text-3xl font-bold mb-4 sm:mb-6 text-center sm:text-left text-gray-700">สร้างการจัดการเรียนการสอนใหม่</h2>

        <form asp-action="CreateManage" method="post" class="space-y-4 sm:space-y-6">
            <div class="validation-summary-errors text-red-600 text-sm mb-4" asp-validation-summary="ModelOnly"></div>

            <div>
                <label asp-for="ClassId" class="block text-sm font-semibold mb-1 sm:mb-2">
                    ชั้นเรียน <span class="text-red-500">*</span> (ระดับชั้น / เลขที่ห้อง)
                </label>
                <select asp-for="ClassId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400 text-sm">
                    <option value="">-- เลือกชั้นเรียน --</option>
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Classes"])
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="ClassId" class="text-red-600 text-xs"></span>
            </div>

            <div>
                <label asp-for="TeacherId" class="block text-sm font-semibold mb-1 sm:mb-2">
                    ครูผู้สอน <span class="text-red-500">*</span>
                </label>
                <select asp-for="TeacherId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400 text-sm">
                    <option value="">-- เลือกครูผู้สอน --</option>
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Teachers"])
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="TeacherId" class="text-red-600 text-xs"></span>
            </div>

            <div>
                <label asp-for="CourseId" class="block text-sm font-semibold mb-1 sm:mb-2">
                    วิชา <span class="text-red-500">*</span>
                </label>
                <select asp-for="CourseId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400 text-sm">
                    <option value="">-- เลือกวิชา --</option>
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Courses"])
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="CourseId" class="text-red-600 text-xs"></span>
            </div>

            <div>
                <label asp-for="SemesterId" class="block text-sm font-semibold mb-1 sm:mb-2">
                    ภาคการศึกษา <span class="text-red-500">*</span>
                </label>
                <select asp-for="SemesterId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400 text-sm">
                    <option value="">-- เลือกภาคการศึกษา --</option>
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewData["Semesters"])
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="SemesterId" class="text-red-600 text-xs"></span>
            </div>

            <div>
                <label asp-for="ScoringCriteria" class="block text-sm font-semibold mb-1 sm:mb-2">
                    เกณฑ์การให้คะแนน
                </label>
                <textarea asp-for="ScoringCriteria" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400 text-sm h-24 sm:h-32" placeholder="ระบุเกณฑ์การให้คะแนน (ไม่บังคับ)"></textarea>
                <span asp-validation-for="ScoringCriteria" class="text-red-600 text-xs"></span>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                <div>
                    <label asp-for="CheckCount" class="block text-sm font-semibold mb-1 sm:mb-2">
                        จำนวนการเช็คชื่อ
                    </label>
                    <input asp-for="CheckCount" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100 cursor-not-allowed text-sm" value="0" readonly />
                    <span asp-validation-for="CheckCount" class="text-red-600 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Status" class="block text-sm font-semibold mb-1 sm:mb-2">
                        Status
                    </label>
                    <select asp-for="Status" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400 text-sm">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <span asp-validation-for="Status" class="text-red-600 text-xs"></span>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row items-center justify-between pt-4 space-y-3 sm:space-y-0">
                <button type="submit" class="w-full sm:w-auto bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 sm:px-6 rounded-md text-sm">
                    <i class="fas fa-plus-circle mr-1"></i> สร้างการจัดการเรียนการสอน
                </button>
                <a asp-action="Index" class="w-full sm:w-auto text-center bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 sm:px-6 rounded-md text-sm">
                    <i class="fas fa-arrow-left mr-1"></i> ยกเลิก
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Dynamically include FontAwesome if not already loaded in the layout
        if (!document.getElementById('fontawesome-css')) {
            var link = document.createElement('link');
            link.id = 'fontawesome-css';
            link.rel = 'stylesheet';
            link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css';
            document.head.appendChild(link);
        }
    </script>
}