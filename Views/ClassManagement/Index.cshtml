@model SchoolSystem.Helpers.PaginatedList<SchoolSystem.Models.ClassManagement.ClassManagement>
@{
    ViewData["Title"] = "Class Management";
    var statuses = ViewData["Statuses"] as List<SelectListItem>;
    var classes = ViewData["Classes"] as List<SelectListItem>;
    var teachers = ViewData["Teachers"] as List<SelectListItem>;
    var courses = ViewData["Courses"] as List<SelectListItem>;
    var semesters = ViewData["Semesters"] as List<SelectListItem>;

    var currentStatus = ViewData["CurrentStatus"]?.ToString();
    var currentClass = ViewData["CurrentClass"]?.ToString();
    var currentTeacher = ViewData["CurrentTeacher"]?.ToString();
    var currentCourse = ViewData["CurrentCourse"]?.ToString();
    var currentSemester = ViewData["CurrentSemester"]?.ToString();
    var currentFilter = ViewData["CurrentFilter"]?.ToString();
    var currentSort = ViewData["CurrentSort"]?.ToString();
}
<div class="container mx-auto md:px-4 py-6">
    <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">Class Management</h2>

        <!-- Search and Filter Section -->
        <div class="bg-gray-50 p-4 rounded-lg mb-6">
            <form asp-action="Index" method="get" class="flex flex-wrap gap-4">
                <!-- Search Input -->
                <div class="flex-1 min-w-fit">
                    <input type="text" name="searchString" value="@currentFilter" class="w-full p-2 border rounded" placeholder="Search..." />
                </div>

                <!-- Status Filter Dropdown -->
                <div class="flex-1 min-w-fit">
                    <select name="statusFilter" class="w-full p-2 border rounded">
                        <option value="">All Status</option>
                        @foreach (var status in statuses)
                        {
                            <option value="@status.Value" selected="@(status.Value == currentStatus ? "selected" : null)">
                                @status.Text
                            </option>
                        }
                    </select>
                </div>

                <!-- Class Filter Dropdown -->
                <div class="flex-1 min-w-fit">
                    <select name="classFilter" class="w-full p-2 border rounded">
                        <option value="">All Classes</option>
                        @foreach (var cls in classes)
                        {
                            <option value="@cls.Value" selected="@(cls.Value == currentClass ? "selected" : null)">
                                @cls.Text
                            </option>
                        }
                    </select>
                </div>

                <!-- Teacher Filter Dropdown -->
                <div class="flex-1 min-w-fit">
                    <select name="teacherFilter" class="w-full p-2 border rounded">
                        <option value="">All Teachers</option>
                        @foreach (var teacher in teachers)
                        {
                            <option value="@teacher.Value" selected="@(teacher.Value == currentTeacher ? "selected" : null)">
                                @teacher.Text
                            </option>
                        }
                    </select>
                </div>

                <!-- Course Filter Dropdown -->
                <div class="flex-1 min-w-fit">
                    <select name="courseFilter" class="w-full p-2 border rounded">
                        <option value="">All Courses</option>
                        @foreach (var course in courses)
                        {
                            <option value="@course.Value" selected="@(course.Value == currentCourse ? "selected" : null)">
                                @course.Text
                            </option>
                        }
                    </select>
                </div>

                <!-- Semester Filter Dropdown -->
                <div class="flex-1 min-w-fit">
                    <select name="semesterFilter" class="w-full p-2 border rounded">
                        <option value="">All Semesters</option>
                        @foreach (var semester in semesters)
                        {
                            <option value="@semester.Value" selected="@(semester.Value == currentSemester ? "selected" : null)">
                                @semester.Text
                            </option>
                        }
                    </select>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-2">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-400 text-white px-4 py-2 rounded">
                        <i class="fas fa-search mr-1"></i> Search
                    </button>
                    <a asp-action="Index" class="bg-gray-500 hover:bg-gray-400 text-white px-4 py-2 rounded">
                        Reset
                    </a>
                </div>
            </form>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col md:flex-row justify-between items-center mb-4">
            <a asp-action="CreateManage" class="bg-green-600 hover:bg-green-500 text-white px-4 py-2 rounded-md flex items-center mb-4 md:mb-0">
                <i class="fas fa-plus-circle mr-2"></i> Add New Class Assignment
            </a>
            <div class="text-gray-600">
                Showing @Model.Count of @ViewData["TotalItems"] class assignments | Page @Model.PageIndex of @Model.TotalPages
            </div>
        </div>

        <!-- Class Management Table -->
        <div class="overflow-x-auto">
            <table class="min-w-full border-collapse border border-gray-300">
                <thead>
                    <tr class="bg-gray-100 text-gray-700">
                        <th class="border px-4 py-2">
                            <a asp-action="Index"
                               asp-route-sortOrder="@ViewData["ClassSortParam"]"
                               asp-route-currentFilter="@currentFilter"
                               asp-route-statusFilter="@currentStatus"
                               asp-route-classFilter="@currentClass"
                               asp-route-teacherFilter="@currentTeacher"
                               asp-route-courseFilter="@currentCourse"
                               asp-route-semesterFilter="@currentSemester"
                               class="flex items-center justify-between">
                                Class
                                @if (currentSort == "class" || currentSort == "class_desc")
                                {
                                    <i class="fas fa-sort-@(currentSort == "class_desc" ? "down" : "up") ml-1"></i>
                                }
                            </a>
                        </th>
                        <th class="border px-4 py-2">
                            <a asp-action="Index"
                               asp-route-sortOrder="@ViewData["TeacherSortParam"]"
                               asp-route-currentFilter="@currentFilter"
                               asp-route-statusFilter="@currentStatus"
                               asp-route-classFilter="@currentClass"
                               asp-route-teacherFilter="@currentTeacher"
                               asp-route-courseFilter="@currentCourse"
                               asp-route-semesterFilter="@currentSemester"
                               class="flex items-center justify-between">
                                Teacher
                                @if (currentSort == "teacher" || currentSort == "teacher_desc")
                                {
                                    <i class="fas fa-sort-@(currentSort == "teacher_desc" ? "down" : "up") ml-1"></i>
                                }
                            </a>
                        </th>
                        <th class="border px-4 py-2">
                            <a asp-action="Index"
                               asp-route-sortOrder="@ViewData["CourseSortParam"]"
                               asp-route-currentFilter="@currentFilter"
                               asp-route-statusFilter="@currentStatus"
                               asp-route-classFilter="@currentClass"
                               asp-route-teacherFilter="@currentTeacher"
                               asp-route-courseFilter="@currentCourse"
                               asp-route-semesterFilter="@currentSemester"
                               class="flex items-center justify-between">
                                Course
                                @if (currentSort == "course" || currentSort == "course_desc")
                                {
                                    <i class="fas fa-sort-@(currentSort == "course_desc" ? "down" : "up") ml-1"></i>
                                }
                            </a>
                        </th>
                        <th class="border px-4 py-2">
                            <a asp-action="Index"
                               asp-route-sortOrder="@ViewData["SemesterSortParam"]"
                               asp-route-currentFilter="@currentFilter"
                               asp-route-statusFilter="@currentStatus"
                               asp-route-classFilter="@currentClass"
                               asp-route-teacherFilter="@currentTeacher"
                               asp-route-courseFilter="@currentCourse"
                               asp-route-semesterFilter="@currentSemester"
                               class="flex items-center justify-between">
                                Semester
                                @if (currentSort == "semester" || currentSort == "semester_desc")
                                {
                                    <i class="fas fa-sort-@(currentSort == "semester_desc" ? "down" : "up") ml-1"></i>
                                }
                            </a>
                        </th>
                        <th class="border px-4 py-2">Scoring Criteria</th>
                        <th class="border px-4 py-2">
                            <a asp-action="Index"
                               asp-route-sortOrder="@ViewData["StatusSortParam"]"
                               asp-route-currentFilter="@currentFilter"
                               asp-route-statusFilter="@currentStatus"
                               asp-route-classFilter="@currentClass"
                               asp-route-teacherFilter="@currentTeacher"
                               asp-route-courseFilter="@currentCourse"
                               asp-route-semesterFilter="@currentSemester"
                               class="flex items-center justify-between">
                                Status
                                @if (currentSort == "status" || currentSort == "status_desc")
                                {
                                    <i class="fas fa-sort-@(currentSort == "status_desc" ? "down" : "up") ml-1"></i>
                                }
                            </a>
                        </th>
                        <th class="border px-4 py-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var classManagement in Model)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="border px-4 py-2">@(classManagement.Class?.GradeLevels?.Name + "/" + classManagement.Class?.ClassNumber)</td>
                                <td class="border px-4 py-2">@(classManagement.Teacher?.Profile?.FirstName + " " + classManagement.Teacher?.Profile?.LastName)</td>
                                <td class="border px-4 py-2">@classManagement.Course?.CourseName</td>
                                <td class="border px-4 py-2">@(classManagement.Semester?.SemesterYear + "/" + classManagement.Semester?.SemesterNumber)</td>
                                <td class="border px-4 py-2">@(classManagement.ScoringCriteria ?? "-")</td>
                                <td class="border px-4 py-2">@classManagement.Status</td>
                                <td class="border px-4 py-2">
                                    <div class="flex justify-center gap-1">
                                        <a asp-action="ViewManage" asp-route-id="@classManagement.CM_Id" class="bg-blue-500 hover:bg-blue-400 text-white px-2 py-1 rounded text-sm" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="EditManage" asp-route-id="@classManagement.CM_Id" class="bg-yellow-500 hover:bg-yellow-400 text-white px-2 py-1 rounded text-sm" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="IndexClassSchedule" asp-controller="ClassSchedule" asp-route-cmId="@classManagement.CM_Id" class="bg-purple-500 hover:bg-purple-400 text-white px-2 py-1 rounded text-sm" title="Manage Schedule">
                                            <i class="fas fa-calendar-alt"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <form asp-controller="ClassManagement" asp-action="DeleteManage" asp-route-id="@classManagement.CM_Id" method="post"
                                                  onsubmit="return confirm('Are you sure you want to delete this class assignment?');"
                                                  class="flex justify-between items-center">
                                                <input type="hidden" asp-for="@classManagement.CM_Id" />
                                                <button type="submit" class="bg-red-500 hover:bg-red-400 text-white px-2 py-1 rounded text-sm">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-gray-500 p-6">
                                <div class="flex flex-col items-center">
                                    <i class="fas fa-search text-4xl mb-2"></i>
                                    <p>No class assignments found matching your criteria.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        <div class="flex flex-col md:flex-row justify-between items-center mt-6">
            <span class="text-gray-600 mb-2 md:mb-0">Page @Model.PageIndex of @Model.TotalPages</span>
            <div class="flex space-x-2">
                @if (Model.HasPreviousPage)
                {
                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-sortOrder="@currentSort"
                       asp-route-currentFilter="@currentFilter"
                       asp-route-statusFilter="@currentStatus"
                       asp-route-classFilter="@currentClass"
                       asp-route-teacherFilter="@currentTeacher"
                       asp-route-courseFilter="@currentCourse"
                       asp-route-semesterFilter="@currentSemester"
                       class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300">
                        <i class="fas fa-chevron-left mr-1"></i> Previous
                    </a>
                }
                else
                {
                    <span class="px-4 py-2 bg-gray-100 text-gray-400 rounded cursor-not-allowed">
                        <i class="fas fa-chevron-left mr-1"></i> Previous
                    </span>
                }

                @if (Model.HasNextPage)
                {
                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-sortOrder="@currentSort"
                       asp-route-currentFilter="@currentFilter"
                       asp-route-statusFilter="@currentStatus"
                       asp-route-classFilter="@currentClass"
                       asp-route-teacherFilter="@currentTeacher"
                       asp-route-courseFilter="@currentCourse"
                       asp-route-semesterFilter="@currentSemester"
                       class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300">
                        Next <i class="fas fa-chevron-right ml-1"></i>
                    </a>
                }
                else
                {
                    <span class="px-4 py-2 bg-gray-100 text-gray-400 rounded cursor-not-allowed">
                        Next <i class="fas fa-chevron-right ml-1"></i>
                    </span>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Dynamically include FontAwesome if not already loaded in the layout
        if (!document.getElementById('fontawesome-css')) {
            var link = document.createElement('link');
            link.id = 'fontawesome-css';
            link.rel = 'stylesheet';
            link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css';
            document.head.appendChild(link);
        }
    </script>
}