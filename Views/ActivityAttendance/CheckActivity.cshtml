@using SchoolSystem.Models.ViewModels
@model ActivityAttendanceViewModel
@{
    ViewData["Title"] = "เช็คชื่อกิจกรรม";
}

<div class="max-w-5xl mx-auto bg-white shadow-lg rounded-lg p-6">
    <div class="mb-4 bg-gray-100 p-4 rounded-lg">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-gray-500">วันที่ปัจจุบัน</p>
                <h2 class="text-xl font-bold text-gray-800">วัน@(Model.CurrentDay) ที่ @(Model.CurrentDate.ToString("dd/MM/yyyy"))</h2>
            </div>
            <div class="text-right">
                <p class="text-gray-500">ผู้ใช้งาน</p>
                <h2 class="text-xl font-bold text-gray-800">@User.Identity?.Name</h2>
            </div>
        </div>
    </div>

    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800">
            📅 กิจกรรมในวันนี้
        </h1>
        <div class="flex space-x-3">
            <a href="@Url.Action("CheckAllActivity", "ActivityAttendance")"
               class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 shadow-md transition-all duration-300">
                📋 สรุปการเช็คชื่อ
            </a>
        </div>
    </div>

    @if (Model.Schedules != null && Model.Schedules.Any())
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var activity in Model.Schedules)
            {
                <a asp-controller="ActivityAttendance" asp-action="SelectClass" asp-route-amId="@activity.Id"
                   class="block bg-gradient-to-r from-green-500 to-teal-500 text-white p-6 rounded-xl shadow-md hover:shadow-lg hover:scale-105 transition-all duration-300">
                    <div class="text-center mt-2">
                        <h2 class="text-xl font-semibold mt-1">@activity.Name</h2>
                        <div class="mt-4 pt-3 border-t border-green-400 border-opacity-30">
                            <p class="text-sm opacity-90 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                                </svg>
                                แตะเพื่อเช็คชื่อกิจกรรม
                            </p>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
    else
    {
        <div class="text-center p-10 bg-gray-50 rounded-xl">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="text-xl font-semibold text-gray-700 mt-4">ไม่มีกิจกรรมในวันนี้</h3>
            <p class="text-gray-500 mt-2">คุณไม่มีกิจกรรมที่ต้องเช็คชื่อสำหรับวันนี้</p>
            <a href="@Url.Action("Home", "Home")" class="mt-4 inline-block bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-all duration-300">
                กลับไปหน้าหลัก
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // แสดงการโหลดเมื่อผู้ใช้กดที่กิจกรรม
        document.querySelectorAll('a[href*="MarkActivityAttendance"]').forEach(link => {
            link.addEventListener('click', function() {
                this.classList.add('opacity-75', 'pointer-events-none');
                this.innerHTML += '<div class="flex justify-center mt-3"><div class="loader">กำลังโหลด...</div></div>';
            });
        });
    </script>
}