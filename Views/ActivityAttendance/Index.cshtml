@model IEnumerable<SchoolSystem.Models.ActivityManagement.ActivityManagement>

@{
    ViewData["Title"] = "Daily Activity Attendance";
}

<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">Daily Activity Attendance</h2>

    @if (!Model.Any())
    {
        <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 rounded-lg shadow-md">
            <p class="text-lg">No activities available for attendance today.</p>
        </div>
    }
    else
    {
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
                <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="py-3 px-6 text-left text-sm font-semibold uppercase tracking-wider">Activity Name</th>
                        <th class="py-3 px-6 text-left text-sm font-semibold uppercase tracking-wider">Description</th>
                        <th class="py-3 px-6 text-center text-sm font-semibold uppercase tracking-wider">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                            <td class="py-4 px-6 text-gray-700">@item.Activity.ActivityName</td>
                            <td class="py-4 px-6 text-gray-600">@item.Activity.Description</td>
                            <td class="py-4 px-6 text-center">
                                <a asp-action="SelectClass"
                                   asp-route-activityManagementId="@item.AM_id"
                                   class="inline-block bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors duration-200">
                                    Select Class
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Optional: Add Tailwind CSS via CDN for quick testing -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">