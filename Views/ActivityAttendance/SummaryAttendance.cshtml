@using SchoolSystem.Models.ActivityManagement
@model List<AttendanceSummaryViewModel>
@{
    ViewData["Title"] = "ข้อมูลการเข้ากิจกรรม";
}

<div class="container mx-auto px-4 py-6">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h2 class="text-2xl font-bold text-gray-800">@ViewData["Title"]</h2>
        </div>

        @if (Model.Any())
        {
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-100 border-b border-gray-200">
                        <tr>
                            @{
                                string[] headerClasses = {
                        "text-left text-xs font-semibold text-gray-600 uppercase tracking-wider px-6 py-3",
                        "text-center text-xs font-semibold text-gray-600 uppercase tracking-wider px-6 py-3"
                                        };
                            }
                            <th class="@headerClasses[0]">รหัสนักเรียน</th>
                            <th class="@headerClasses[0]">ชื่อ</th>
                            <th class="@headerClasses[1]">จำนวนการเข้า</th>
                            <th class="@headerClasses[1]">จำนวนการขาด</th>
                            <th class="@headerClasses[1]">จำนวนการมาสาย</th>
                            <th class="@headerClasses[1]">จำนวนการลา</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        @foreach (var summary in Model)
                        {
                            <tr class="hover:bg-gray-50 transition-colors duration-200">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@summary.StudentCode</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@summary.Name</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-green-600 font-semibold">@summary.PresentCount</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-red-600 font-semibold">@summary.AbsentCount</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-yellow-600 font-semibold">@summary.LateCount</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-blue-600 font-semibold">@summary.ExcusedCount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-6">
                <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r-lg">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <svg class="h-6 w-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-blue-700">
                                <strong class="font-bold">ข้อมูล!</strong>
                                <span class="block sm:inline">ไม่พบข้อมูลการเข้าเรียนสำหรับวิชานี้</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>