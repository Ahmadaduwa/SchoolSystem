@model SchoolSystem.Models.ViewModels.ActivityAttendanceSelectClassViewModel

@{
    ViewData["Title"] = "Select Class for Attendance";
}

<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">
        Select Class for Activity: <span class="text-blue-600">@Model.ActivityName</span>
    </h2>

    <form asp-action="MarkAttendance" asp-controller="ActivityAttendance" method="get" class="bg-white shadow-md rounded-lg p-6 max-w-md">
        <input type="hidden" name="activityManagementId" value="@Model.ActivityManagementId" />

        <div class="mb-6">
            <label for="classId" class="block text-gray-700 font-semibold mb-2">Select Class:</label>
            <select name="classId" id="classId" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">-- Please select a class --</option>
                @foreach (var cls in Model.Classes)
                {
                    <option value="@cls.ClassId">@(cls.GradeLevels?.Name ?? "Unknown Grade")/@cls.ClassNumber</option>
                }
            </select>
        </div>

        <div class="text-gray-600 mb-4">
            <p>Attendance will be recorded for today: <span class="font-semibold">@DateTime.Now.ToString("MMMM dd, yyyy")</span></p>
        </div>

        <button type="submit"
                class="w-full bg-green-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-green-700 transition-colors duration-200">
            Proceed to Attendance
        </button>
    </form>
</div>

<!-- Optional: Tailwind CSS CDN for testing -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">