@model SchoolSystem.Models.ViewModels.ActivityAttendanceSelectClassViewModel
@{
    ViewData["Title"] = "Select Class for Attendance";
}

<div class="bg-gray-100 flex items-center justify-center px-4 py-8">
    <div class="w-full max-w-md">
        <div class="bg-white shadow-xl rounded-2xl overflow-hidden">
            <div class="bg-blue-600 text-white px-6 py-4">
                <h2 class="text-2xl font-bold text-center">
                    Select Class for Activity
                </h2>
            </div>

            <form asp-action="MarkAttendance" asp-controller="ActivityAttendance" method="get" class="p-6 space-y-6">
                <input type="hidden" name="activityManagementId" value="@Model.ActivityManagementId" />

                <div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">
                        Activity: <span class="text-blue-600">@Model.ActivityName</span>
                    </h3>
                </div>

                <div>
                    <label for="classId" class="block text-gray-700 font-medium mb-2">Select Class</label>
                    <select name="classId" id="classId" required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg
                                   focus:outline-none focus:ring-2 focus:ring-blue-500
                                   focus:border-transparent
                                   transition duration-200 ease-in-out">
                        <option value="">-- Please select a class --</option>
                        @foreach (var cls in Model.Classes)
                        {
                            <option value="@cls.ClassId">
                                @(cls.GradeLevels?.Name ?? "Unknown Grade")/@cls.ClassNumber
                            </option>
                        }
                    </select>
                </div>

                <div class="text-center text-gray-600">
                    <p class="text-sm">
                        Attendance will be recorded for
                        <span class="font-semibold text-blue-600">
                            @DateTime.Now.ToString("MMMM dd, yyyy")
                        </span>
                    </p>
                </div>

                <button type="submit"
                        class="w-full bg-green-600 text-white font-semibold
                               py-3 px-4 rounded-lg
                               hover:bg-green-700
                               focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2
                               transition-all duration-200 ease-in-out
                               transform hover:scale-105 active:scale-95">
                    Proceed to Attendance
                </button>
            </form>
        </div>
    </div>
</div>