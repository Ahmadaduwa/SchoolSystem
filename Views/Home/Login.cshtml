@using SchoolSystem.Models.ViewModels
@model SchoolSystem.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - School System</title>
    <link href="~/css/output.css" rel="stylesheet" asp-append-version="true">
</head>
<body class="bg-gray-100 font-sans">
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md bg-white rounded-lg shadow-md p-6">
            <h2 class="text-center text-2xl font-bold text-gray-700 mb-6">Login</h2>
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="text-red-500 text-center mb-4">
                    @TempData["ErrorMessage"]
                </div>
            }
            <form asp-controller="Home" asp-action="Login" method="post" class="space-y-4">
                @Html.AntiForgeryToken()
                <!-- Username Field -->
                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Username" placeholder="Enter your username" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                    <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
                </div>
                <!-- Password Field -->
                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Password" placeholder="Enter your password" type="password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>
                <!-- Remember Me Checkbox -->
                <div class="flex items-center">
                    <input asp-for="RememberMe" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                    <label class="ml-2 block text-sm text-gray-900">
                        @Html.DisplayNameFor(a => a.RememberMe)
                    </label>
                </div>
                <!-- Submit Button -->
                <div>
                    <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-md shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200">
                        Login
                    </button>
                </div>
                <div class="text-center">
                    <a asp-controller="Home" asp-action="Index" class="text-gray-600 hover:underline mt-3 inline-block">Back</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>