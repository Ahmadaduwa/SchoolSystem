@{

    Layout = "";
}

<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>โรงเรียนมัธยม - หน้าแรก</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    
</head>
<body class="bg-gray-50">
    <!-- Navbar -->
    <nav class="bg-white shadow-lg fixed w-full z-50 border-b border-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-20">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <img class="h-16 w-16 animate-float" src="/api/placeholder/64/64" alt="โลโก้โรงเรียน">
                    </div>
                    <div class="hidden md:block">
                        <div class="ml-10 flex items-baseline space-x-6">
                            <a href="#" class="text-blue-600 px-3 py-2 text-sm font-medium border-b-2 border-blue-600">หน้าแรก</a>
                            <a href="#" class="text-gray-600 hover:text-blue-600 px-3 py-2 text-sm font-medium hover:border-b-2 hover:border-blue-600 transition-all duration-200">เกี่ยวกับเรา</a>
                            <a href="#" class="text-gray-600 hover:text-blue-600 px-3 py-2 text-sm font-medium hover:border-b-2 hover:border-blue-600 transition-all duration-200">หลักสูตร</a>
                            <a href="#" class="text-gray-600 hover:text-blue-600 px-3 py-2 text-sm font-medium hover:border-b-2 hover:border-blue-600 transition-all duration-200">ข่าวสาร</a>
                            <a href="#" class="text-gray-600 hover:text-blue-600 px-3 py-2 text-sm font-medium hover:border-b-2 hover:border-blue-600 transition-all duration-200">ติดต่อ</a>
                        </div>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <partial name="Partial/_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="relative bg-blue-600 min-h-screen flex items-center">
        <div class="absolute inset-0">
            <img src="/api/placeholder/1920/1080" alt="ภาพโรงเรียน" class="w-full h-full object-cover">
            <div class="absolute inset-0 hero-gradient"></div>
        </div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
            <h1 class="text-5xl font-bold text-white sm:text-6xl md:text-7xl leading-tight">
                โรงเรียนมัธยม<br />แห่งการเรียนรู้
            </h1>
            <p class="mt-8 max-w-3xl text-xl text-gray-100 leading-relaxed">
                มุ่งมั่นพัฒนาการศึกษา สร้างอนาคตที่สดใส<br />เพื่อเยาวชนไทยก้าวไกลสู่สากล
            </p>
            <div class="mt-10 flex space-x-4">
                <button class="bg-white text-blue-600 px-8 py-4 rounded-full text-lg font-medium hover:bg-blue-50 transition-all duration-200 shadow-lg hover:shadow-xl hover-scale">
                    <a href="/account/register">สมัครเรียน</a>
                </button>
                <button class="border-2 border-white text-white px-8 py-4 rounded-full text-lg font-medium hover:bg-white hover:text-blue-600 transition-all duration-200 hover-scale">
                    ดูหลักสูตร
                </button>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="py-24 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-4xl font-bold text-center mb-16 gradient-text">จุดเด่นของเรา</h2>
            <div class="grid grid-cols-1 gap-12 md:grid-cols-3">
                <div class="feature-card p-8 bg-white rounded-2xl shadow-lg">
                    <img src="/api/placeholder/64/64" alt="หลักสูตร" class="w-20 h-20 mb-6 animate-float">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">หลักสูตรที่ทันสมัย</h3>
                    <p class="text-gray-600 leading-relaxed">พัฒนาหลักสูตรการเรียนการสอนที่ทันสมัย ตอบโจทย์การเรียนรู้ในศตวรรษที่ 21 พร้อมก้าวสู่โลกอนาคต</p>
                </div>
                <div class="feature-card p-8 bg-white rounded-2xl shadow-lg">
                    <img src="/api/placeholder/64/64" alt="ครู" class="w-20 h-20 mb-6 animate-float">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">ครูผู้เชี่ยวชาญ</h3>
                    <p class="text-gray-600 leading-relaxed">คณาจารย์ที่มีความเชี่ยวชาญและประสบการณ์ในการสอน พร้อมดูแลนักเรียนอย่างใกล้ชิด</p>
                </div>
                <div class="feature-card p-8 bg-white rounded-2xl shadow-lg">
                    <img src="/api/placeholder/64/64" alt="สิ่งอำนวยความสะดวก" class="w-20 h-20 mb-6 animate-float">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">สิ่งอำนวยความสะดวกครบครัน</h3>
                    <p class="text-gray-600 leading-relaxed">อาคารเรียน ห้องปฏิบัติการ และสิ่งอำนวยความสะดวกที่ทันสมัย เพื่อการเรียนรู้อย่างมีประสิทธิภาพ</p>
                </div>
            </div>
        </div>
    </div>

    <!-- News Section -->
    <div class="py-24 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-4xl font-bold text-center mb-16 gradient-text">ข่าวสารและกิจกรรม</h2>
            <div class="grid grid-cols-1 gap-12 md:grid-cols-3">
                <div class="news-card bg-white rounded-2xl overflow-hidden shadow-lg">
                    <img src="/api/placeholder/400/300" alt="ข่าว 1" class="w-full h-56 object-cover">
                    <div class="p-8">
                        <span class="text-blue-600 text-sm font-medium">15 มกราคม 2567</span>
                        <h3 class="text-xl font-semibold text-gray-900 mt-2">การแข่งขันวิชาการประจำปี</h3>
                        <p class="mt-4 text-gray-600 leading-relaxed">นักเรียนของเราได้รับรางวัลชนะเลิศการแข่งขันวิชาการระดับประเทศ สร้างชื่อเสียงให้โรงเรียน</p>
                        <a href="#" class="inline-block mt-6 text-blue-600 font-medium hover:text-blue-700">อ่านเพิ่มเติม →</a>
                    </div>
                </div>
                <div class="news-card bg-white rounded-2xl overflow-hidden shadow-lg">
                    <img src="/api/placeholder/400/300" alt="ข่าว 2" class="w-full h-56 object-cover">
                    <div class="p-8">
                        <span class="text-blue-600 text-sm font-medium">10 มกราคม 2567</span>
                        <h3 class="text-xl font-semibold text-gray-900 mt-2">กิจกรรมจิตอาสา</h3>
                        <p class="mt-4 text-gray-600 leading-relaxed">นักเรียนร่วมกิจกรรมจิตอาสาพัฒนาชุมชน สร้างจิตสำนึกที่ดีในการช่วยเหลือสังคม</p>
                        <a href="#" class="inline-block mt-6 text-blue-600 font-medium hover:text-blue-700">อ่านเพิ่มเติม →</a>
                    </div>
                </div>
                <div class="news-card bg-white rounded-2xl overflow-hidden shadow-lg">
                    <img src="/api/placeholder/400/300" alt="ข่าว 3" class="w-full h-56 object-cover">
                    <div class="p-8">
                        <span class="text-blue-600 text-sm font-medium">5 มกราคม 2567</span>
                        <h3 class="text-xl font-semibold text-gray-900 mt-2">การอบรมพัฒนาครู</h3>
                        <p class="mt-4 text-gray-600 leading-relaxed">คณะครูเข้าร่วมการอบรมพัฒนาศักยภาพการสอนแนวใหม่ เพื่อยกระดับการศึกษา</p>
                        <a href="#" class="inline-block mt-6 text-blue-600 font-medium hover:text-blue-700">อ่านเพิ่มเติม →</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

