@using SchoolSystem.Models.ViewModels
@model SchoolSystem.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/Layout/_AccountLayout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-lg shadow-xl overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-blue-600 to-blue-800 px-6 py-8 text-center">
                <h2 class="text-2xl font-bold text-white">ลงทะเบียนเข้าใช้งานระบบ</h2>
            </div>

            <!-- Form -->
            <div class="px-6 py-8">
                <form asp-controller="Home" asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="mb-6 bg-red-50 text-red-600 px-4 py-3 rounded-lg"></div>

                    <!-- Personal Information Section -->
                    <div class="mb-8">
                        <h3 class="text-lg font-semibold text-blue-600 mb-4">ข้อมูลส่วนตัว</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1">ชื่อ</label>
                                <input asp-for="FirstName"
                                       class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                                       placeholder="กรุณากรอกชื่อ" />
                                <span asp-validation-for="FirstName" class="text-sm text-red-600 mt-1"></span>
                            </div>
                            <div>
                                <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1">นามสกุล</label>
                                <input asp-for="LastName"
                                       class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                                       placeholder="กรุณากรอกนามสกุล" />
                                <span asp-validation-for="LastName" class="text-sm text-red-600 mt-1"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Account Information Section -->
                    <div class="mb-8">
                        <h3 class="text-lg font-semibold text-blue-600 mb-4">ข้อมูลบัญชี</h3>
                        <div class="mb-4">
                            <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">ชื่อผู้ใช้</label>
                            <input asp-for="Username"
                                   class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                                   placeholder="กรุณากรอกชื่อผู้ใช้" />
                            <span asp-validation-for="Username" class="text-sm text-red-600 mt-1"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">อีเมล</label>
                            <input asp-for="Email" type="email"
                                   class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                                   placeholder="example@email.com" />
                            <span asp-validation-for="Email" class="text-sm text-red-600 mt-1"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">รหัสผ่าน</label>
                            <input asp-for="Password" type="password"
                                   class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                                   placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-sm text-red-600 mt-1"></span>
                        </div>
                        <div class="mb-6">
                            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">ยืนยันรหัสผ่าน</label>
                            <input asp-for="ConfirmPassword" type="password"
                                   class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring-blue-500"
                                   placeholder="••••••••" />
                            <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600 mt-1"></span>
                        </div>
                    </div>

                    <button type="submit"
                            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200">
                        ลงทะเบียน
                    </button>

                    <p class="text-center mt-4 text-sm text-gray-600">
                        มีบัญชีผู้ใช้แล้ว?
                        <a href="/login" class="text-blue-600 hover:text-blue-700 font-medium">เข้าสู่ระบบ</a>
                    </p>
                    <div class="text-center">
                        <a asp-controller="Home" asp-action="Index" class="text-gray-600 hover:underline mt-3 inline-block">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
                Swal.fire({
                    title: 'สำเร็จ!',
                    text: '@TempData["SuccessMessage"]',
                    icon: 'success',
                    confirmButtonText: 'ตกลง',
                    confirmButtonColor: '#3085d6'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/account/login';
                    }
                });
        </text>
    }
</script>
