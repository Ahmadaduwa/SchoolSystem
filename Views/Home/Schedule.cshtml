@model SchoolSystem.Models.ViewModels.TeachingSchedulePageViewModel

<div class="max-w-7xl mx-auto bg-white shadow-lg rounded-lg p-6n space-y-4 sm:space-y-6 md:space-y-8 p-3 sm:p-4 md:p-6">
        <!-- Header with decorative elements -->
        <header class="relative">
            <div class="absolute inset-0 bg-indigo-100 opacity-50 rounded-xl sm:rounded-2xl -z-10"></div>
            <div class="absolute -top-6 -right-6 w-24 h-24 sm:w-32 sm:h-32 bg-indigo-200 rounded-full opacity-30 -z-10 hidden sm:block"></div>
            <div class="absolute -bottom-6 -left-6 w-16 h-16 sm:w-24 sm:h-24 bg-indigo-300 rounded-full opacity-20 -z-10 hidden sm:block"></div>

            <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 p-4 sm:p-6">
                <div>
                    <span class="inline-block px-2 sm:px-3 py-1 bg-indigo-100 text-indigo-600 text-xs font-medium rounded-full mb-2">ตารางการสอน</span>
                    <h1 class="text-xl sm:text-2xl md:text-3xl font-extrabold text-gray-900 flex items-center">
                        <span>ภาคเรียนที่ @Model.SemesterYear/ @Model.SemesterNumber</span>
                    </h1>
                </div>
            </div>
        </header>

        <!-- Summary Cards - Improved for all platforms -->
        <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-2 sm:gap-4">
            <div class="bg-white rounded-xl sm:rounded-2xl shadow-sm border border-indigo-100 p-3 sm:p-5 transform transition-all duration-200 hover:shadow-md hover:-translate-y-1">
                <div class="flex items-center space-x-2 sm:space-x-4">
                    <div class="rounded-full bg-blue-100 p-2 sm:p-3 flex-shrink-0">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-6 sm:w-6 text-blue-600" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs sm:text-sm font-medium text-gray-500">วิชาทั้งหมด</p>
                        <p class="text-lg sm:text-xl md:text-2xl font-bold text-gray-900 mt-1">
                            @Model.Matrix.Values.SelectMany(dict => dict.Values).SelectMany(list => list).Select(item => item.CourseName).Distinct().Count()
                        </p>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl sm:rounded-2xl shadow-sm border border-indigo-100 p-3 sm:p-5 transform transition-all duration-200 hover:shadow-md hover:-translate-y-1">
                <div class="flex items-center space-x-2 sm:space-x-4">
                    <div class="rounded-full bg-green-100 p-2 sm:p-3 flex-shrink-0">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-6 sm:w-6 text-green-600" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs sm:text-sm font-medium text-gray-500">คาบสอน</p>
                        <p class="text-lg sm:text-xl md:text-2xl font-bold text-gray-900 mt-1">
                            @Model.Matrix.Values.SelectMany(dict => dict.Values).SelectMany(list => list).Count()
                        </p>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl sm:rounded-2xl shadow-sm border border-indigo-100 p-3 sm:p-5 transform transition-all duration-200 hover:shadow-md hover:-translate-y-1">
                <div class="flex items-center space-x-2 sm:space-x-4">
                    <div class="rounded-full bg-purple-100 p-2 sm:p-3 flex-shrink-0">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-6 sm:w-6 text-purple-600" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs sm:text-sm font-medium text-gray-500">ชั้นเรียน</p>
                        <p class="text-lg sm:text-xl md:text-2xl font-bold text-gray-900 mt-1">
                            @Model.Matrix.Values.SelectMany(dict => dict.Values).SelectMany(list => list).Select(item => $"{item.GradeLevel} {item.ClassNumber}").Distinct().Count()
                        </p>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl sm:rounded-2xl shadow-sm border border-indigo-100 p-3 sm:p-5 transform transition-all duration-200 hover:shadow-md hover:-translate-y-1">
                <div class="flex items-center space-x-2 sm:space-x-4">
                    <div class="rounded-full bg-amber-100 p-2 sm:p-3 flex-shrink-0">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-6 sm:w-6 text-amber-600" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-xs sm:text-sm font-medium text-gray-500">วันสอน</p>
                        <p class="text-lg sm:text-xl md:text-2xl font-bold text-gray-900 mt-1">
                            @Model.Matrix.Count(pair => pair.Value.Any(p => p.Value.Any()))
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mobile Schedule View (visible only on small screens) -->
        <div class="block md:hidden bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="p-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
                <h2 class="text-base font-medium">ตารางสอนประจำสัปดาห์</h2>
                <p class="text-indigo-100 text-xs">แสดงรายละเอียดการสอน</p>
            </div>

            <div class="divide-y divide-gray-200">
                @foreach (var day in Model.Days)
                {
                    <div class="p-3">
                        <div class="flex items-center mb-3">
                            <span class="w-2 h-2 rounded-full @(day.English == "Monday" ? "bg-blue-500" : day.English == "Tuesday" ? "bg-green-500" : day.English == "Wednesday" ? "bg-purple-500" : day.English == "Thursday" ? "bg-yellow-500" : day.English == "Friday" ? "bg-pink-500" : day.English == "Saturday" ? "bg-orange-500" : "bg-gray-500") mr-2"></span>
                            <h3 class="text-base font-semibold text-gray-800">@day.Thai</h3>
                        </div>

                        <div class="space-y-3">
                            @foreach (var period in Model.Periods)
                            {
                                <div class="bg-gray-50 rounded-lg p-2">
                                    <div class="text-xs font-medium text-gray-500 mb-1 flex items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                                        </svg>
                                        @period.Name (@period.Start - @period.End)
                                    </div>

                                    @{
                                        var items = Model.Matrix[day.English][period.Name];
                                    }

                                    @if (!items.Any())
                                    {
                                        <div class="flex items-center justify-center h-full min-h-[40px]">
                                            <span class="text-gray-300 text-xs italic">– ว่าง –</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="space-y-2">
                                            @foreach (var item in items)
                                            {
                                                <div class="p-2 bg-white rounded-lg border-l-4 border-indigo-500 shadow-sm">
                                                    <h4 class="text-xs font-medium text-gray-900 truncate">@item.CourseName</h4>
                                                    <div class="flex items-center mt-1 space-x-1">
                                                        <div class="bg-gray-100 rounded-md px-1 py-0.5 text-xs text-gray-600">
                                                            @item.GradeLevel/@item.ClassNumber
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Tablet-specific Schedule View (visible on medium screens like iPad) -->
        <div class="hidden md:block lg:hidden bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="p-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
                <h2 class="text-base font-medium">ตารางสอนประจำสัปดาห์</h2>
                <p class="text-indigo-100 text-xs">แสดงรายละเอียดการสอน</p>
            </div>

            <div class="divide-y divide-gray-200">
                @foreach (var day in Model.Days)
                {
                    <div class="p-3">
                        <div class="flex items-center mb-3">
                            <span class="w-2 h-2 rounded-full @(day.English == "Monday" ? "bg-blue-500" : day.English == "Tuesday" ? "bg-green-500" : day.English == "Wednesday" ? "bg-purple-500" : day.English == "Thursday" ? "bg-yellow-500" : day.English == "Friday" ? "bg-pink-500" : day.English == "Saturday" ? "bg-orange-500" : "bg-gray-500") mr-2"></span>
                            <h3 class="text-base font-semibold text-gray-800">@day.Thai</h3>
                        </div>

                        <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
                            @foreach (var period in Model.Periods)
                            {
                                <div class="bg-gray-50 rounded-lg p-2">
                                    <div class="text-xs font-medium text-gray-500 mb-1 flex items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                                        </svg>
                                        @period.Name (@period.Start - @period.End)
                                    </div>

                                    @{
                                        var items = Model.Matrix[day.English][period.Name];
                                    }

                                    @if (!items.Any())
                                    {
                                        <div class="flex items-center justify-center h-full min-h-[40px]">
                                            <span class="text-gray-300 text-xs italic">– ว่าง –</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="space-y-2">
                                            @foreach (var item in items)
                                            {
                                                <div class="p-2 bg-white rounded-lg border-l-4 border-indigo-500 shadow-sm">
                                                    <h4 class="text-xs font-medium text-gray-900 truncate">@item.CourseName</h4>
                                                    <div class="flex items-center mt-1 space-x-1">
                                                        <div class="bg-gray-100 rounded-md px-1 py-0.5 text-xs text-gray-600">
                                                            @item.GradeLevel/@item.ClassNumber
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Desktop Schedule Table (visible on large screens) -->
        <div class="hidden lg:block bg-white rounded-xl sm:rounded-2xl shadow-lg overflow-hidden">
            <div class="p-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
                <h2 class="text-lg font-medium">ตารางสอนประจำสัปดาห์</h2>
                <p class="text-indigo-100 text-sm">แสดงรายละเอียดการสอนทั้งหมดตามช่วงเวลา</p>
            </div>
            <div class="overflow-x-auto">
                <div class="inline-block min-w-full">
                    <div class="overflow-hidden">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead>
                                <tr>
                                    <th scope="col" class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-50 sticky left-0 z-10 border-b border-r border-gray-200 min-w-[120px]">
                                        วัน / เวลา
                                    </th>
                                    @foreach (var period in Model.Periods)
                                    {
                                        <th scope="col" class="px-4 sm:px-6 py-3 sm:py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b border-gray-200 min-w-[160px] bg-gray-50">
                                            @period.Name
                                        </th>
                                    }
                                </tr>
                                <tr>
                                    <th class="px-4 sm:px-6 py-2 sticky left-0 z-10 bg-gray-50 border-b border-r border-gray-200"></th>
                                    @foreach (var period in Model.Periods)
                                    {
                                        <th class="px-4 sm:px-6 py-2 text-left text-xs text-gray-500 border-b border-gray-200 bg-gray-50">
                                            <span class="inline-flex items-center">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                                                </svg>
                                                @period.Start  –  @period.End
                                            </span>
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @foreach (var day in Model.Days)
                                {
                                    <tr class="hover:bg-indigo-50 transition-colors duration-150">
                                        <td class="px-4 sm:px-6 py-3 sm:py-4 whitespace-nowrap text-sm font-medium text-gray-800 bg-gray-50 sticky left-0 z-10 border-r border-gray-200 flex items-center space-x-2">
                                            <span class="w-2 h-2 rounded-full @(day.English == "Monday" ? "bg-blue-500" : day.English == "Tuesday" ? "bg-green-500" : day.English == "Wednesday" ? "bg-purple-500" : day.English == "Thursday" ? "bg-yellow-500" : day.English == "Friday" ? "bg-pink-500" : day.English == "Saturday" ? "bg-orange-500" : "bg-gray-500")"></span>
                                            <span>@day.Thai</span>
                                        </td>
                                        @foreach (var period in Model.Periods)
                                        {
                                            <td class="px-4 sm:px-6 py-3 sm:py-4">
                                                @{
                                                    var items = Model.Matrix[day.English][period.Name];
                                                }
                                                @if (!items.Any())
                                                {
                                                    <div class="flex items-center justify-center h-full min-h-[60px]">
                                                        <span class="text-gray-300 text-sm italic">– ไม่มีการสอน –</span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="space-y-3">
                                                        @foreach (var item in items)
                                                        {
                                                            <div class="p-3 bg-white rounded-lg border-l-4 border-indigo-500 shadow-sm hover:shadow-md transition-all duration-200">
                                                                <div class="flex justify-between items-start">
                                                                    <h4 class="text-sm font-medium text-gray-900">@item.CourseName</h4>
                                                                    <span class="bg-indigo-100 text-indigo-800 text-xs px-2 py-0.5 rounded-full">@item.StartTime – @item.EndTime</span>
                                                                </div>
                                                                <div class="flex items-center mt-2 space-x-2">
                                                                    <div class="bg-gray-100 rounded-md px-2 py-0.5 text-xs text-gray-600">
                                                                        ห้อง @item.GradeLevel/@item.ClassNumber
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="mt-6 text-center text-xs sm:text-sm text-gray-500">
            <p>ข้อมูลอัปเดตล่าสุด: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
</div>