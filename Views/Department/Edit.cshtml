@model SchoolSystem.Models.UserManagement.Department

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white shadow-xl rounded-xl overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-50 to-blue-50 px-6 py-5 border-b border-gray-200">
            <h2 class="text-3xl font-extrabold text-gray-900">แก้ไขข้อมูลแผนก</h2>
        </div>

        <form asp-controller="Department" asp-action="Edit" asp-route-id="@Model.DepartmentId" method="post" class="p-6 space-y-6">
            <input type="hidden" asp-for="DepartmentId" />

            <div>
                <label asp-for="Name" class="block text-sm font-semibold text-gray-700 mb-2">
                    ชื่อแผนก <span class="text-red-500">*</span>
                </label>
                <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm
                    focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="กรอกชื่อแผนก" required />
                <span asp-validation-for="Name" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-semibold text-gray-700 mb-2">
                    รายละเอียด <span class="text-red-500">*</span>
                </label>
                <textarea asp-for="Description" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm
                    focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" placeholder="กรอกรายละเอียดของแผนก" required></textarea>
                <span asp-validation-for="Description" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Status" class="block text-sm font-semibold text-gray-700 mb-2">
                    Status <span class="text-red-500">*</span>
                </label>
                <select asp-for="Status" asp-items="@ViewBag.Statuses" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm
                    focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" required>
                </select>
                <span asp-validation-for="Status" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <div class="bg-gray-50 border border-gray-200 rounded-md p-4 mt-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <span class="text-gray-600 block mb-1">วันที่สร้าง</span>
                        <p class="font-medium text-gray-800">
                            @(Model.CreatedAt.ToString("dd MMM yyyy HH:mm") ?? "ไม่มีข้อมูล")
                        </p>
                    </div>
                    <div>
                        <span class="text-gray-600 block mb-1">อัปเดตล่าสุด</span>
                        <p class="font-medium text-gray-800">
                            @(Model.UpdatedAt.ToString("dd MMM yyyy HH:mm") ?? "ไม่มีข้อมูล")
                        </p>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-between mt-6">
                <div>
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-md
                        transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        บันทึกการเปลี่ยนแปลง
                    </button>
                    <a asp-action="Index" class="ml-4 text-gray-600 hover:text-gray-900">ยกเลิก</a>
                </div>
                <a asp-action="Details" asp-route-id="@Model.DepartmentId" class="text-indigo-600 hover:text-indigo-800 hover:underline">
                    ดูรายละเอียด
                </a>
            </div>
        </form>
    </div>
</div>
