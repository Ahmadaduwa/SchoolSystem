@model SchoolSystem.Models.UserManagement.Department
@{
    ViewData["Title"] = "Create Department";
}
<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-extrabold text-gray-900 mb-6">Create New Department</h2>

    <form asp-controller="Department" asp-action="Create" method="post" class="bg-white shadow-md rounded-lg p-8 space-y-6">
        <div>
            <label asp-for="Name" class="block text-sm font-semibold text-gray-700 mb-2">Department Name</label>
            <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm
                focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                   placeholder="Enter department name" required />
            <span asp-validation-for="Name" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Description" class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
            <textarea asp-for="Description" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm
                focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                      placeholder="Enter department description" required></textarea>
            <span asp-validation-for="Description" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Status" class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
            <select asp-for="Status" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm
                focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" required>
                <option value="">Select Status</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
            <span asp-validation-for="Status" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-6 rounded-md
                transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50">
                Create Department
            </button>
            <a asp-action="Index" class="text-gray-600 hover:text-gray-900 text-sm">Cancel</a>
        </div>
    </form>
</div>


