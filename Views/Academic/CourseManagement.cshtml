@{
    ViewData["Title"] = "CourseManagement";
    ViewData["UrlUserAvatar"] = "";
    ViewData["Fullname"] = "นายโก โอโห้";
    ViewData["Class"] = "ฝ่ายวิชาการ";
}

<link href="./css/CourseManagement.css" rel="stylesheet" />
<div class="container px-4 mx-auto sm:px-6 lg:px-8">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="bg-blue-600 text-white px-4 py-4 flex flex-col sm:flex-row justify-between items-center">
            <h1 class="text-xl sm:text-2xl font-bold mb-3 sm:mb-0">จัดการหลักสูตร</h1>
            <button class="bg-white text-blue-600 px-3 py-2 rounded-lg hover:bg-blue-50 transition text-sm sm:text-base">
                <i class="fas fa-plus mr-2"></i> เพิ่มหลักสูตร
            </button>
        </div>

        <div class="p-4 sm:p-6 text-xs sm:text-sm">
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="p-2 sm:p-3 text-xs sm:text-sm">รหัสวิชา</th>
                            <th class="p-2 sm:p-3 text-xs sm:text-sm">ชื่อวิชา</th>
                            <th class="p-2 sm:p-3 hidden sm:table-cell text-xs sm:text-sm">คำอธิบาย</th>
                            <th class="p-2 sm:p-3 hidden md:table-cell text-xs sm:text-sm">วันที่สร้าง</th>
                            <th class="p-2 sm:p-3 text-xs sm:text-sm">สถานะ</th>
                            <th class="p-2 sm:p-3 text-xs sm:text-sm">การดำเนินการ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="p-2 sm:p-3 text-xs sm:text-sm">MTH101</td>
                            <td class="p-2 sm:p-3 text-xs sm:text-sm">คณิตศาสตร์พื้นฐาน</td>
                            <td class="p-2 sm:p-3 hidden sm:table-cell text-xs sm:text-sm">การเรียนรู้เบื้องต้นเกี่ยวกับคณิตศาสตร์</td>
                            <td class="p-2 sm:p-3 hidden md:table-cell text-xs sm:text-sm">2023-01-01</td>
                            <td class="p-2 sm:p-3 text-xs sm:text-sm text-green-600">Active</td>
                            <td class="p-2 sm:p-3 relative">
                                <div class="dropdown">
                                    <button class="bg-blue-500 text-white px-3 py-2 rounded-lg hover:bg-blue-600 transition text-xs sm:text-sm"
                                            onclick="toggleTableDropdown(event, 'tableDropdown-MTH101')">
                                        การดำเนินการ <i class="fas fa-chevron-down ml-1"></i>
                                    </button>
                                    <div id="tableDropdown-MTH101"
                                         class="table-dropdown hidden absolute right-0 mt-2 bg-white shadow-lg rounded-lg w-40 z-50 text-xs sm:text-sm">
                                        <button class="block w-full text-left px-3 py-2 hover:bg-gray-100"
                                                onclick="manageCourse('MTH101')">
                                            <i class="fas fa-cogs mr-2"></i> จัดการรายวิชา
                                        </button>
                                        <button class="block w-full text-left px-3 py-2 hover:bg-gray-100"
                                                onclick="editCourse('MTH101')">
                                            <i class="fas fa-edit mr-2"></i> แก้ไข
                                        </button>
                                        <button class="block w-full text-left px-3 py-2 hover:bg-gray-100"
                                                onclick="cancelCourse('MTH101')">
                                            <i class="fas fa-times mr-2"></i> ยกเลิก
                                        </button>
                                        <button class="block w-full text-left px-3 py-2 hover:bg-gray-100"
                                                onclick="deleteCourse('MTH101')">
                                            <i class="fas fa-trash mr-2"></i> ลบ
                                        </button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="./js/CourseManagement.js"></script>