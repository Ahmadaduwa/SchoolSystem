@model SchoolSystem.Models.CurriculumManagement.ExtracurricularActivity

@{
    ViewData["Title"] = "เพิ่มกิจกรรมให้หลักสูตร";
}

@section Css {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
}

<div class="container mx-auto sm:px-6 lg:px-8 py-6">
    <div class="bg-white shadow-lg rounded-lg p-6">
        <h1 class="text-xl sm:text-2xl font-bold text-blue-600 mb-4">
            <i class="fas fa-plus-circle"></i> เพิ่มกิจกรรมให้หลักสูตร
        </h1>

        <!-- แสดง Alert เมื่อบันทึกสำเร็จ -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                <strong>สำเร็จ!</strong> @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="AddActivity" asp-controller="Academic" asp-route-id="@Model.CurriculumId" method="post">

            <div class="mb-4">
                <label class="block text-gray-700 font-medium">กิจกรรม</label>
                <select asp-for="ActivityId" id="activitySelect" class="form-control">
                    <option value="">เลือกกิจกรรม...</option>
                    @foreach (var activity in ViewBag.Activities)
                    {
                        <option value="@activity.ActivityId">@activity.ActivityName</option>
                    }
                </select>
            </div>

            <input type="hidden" asp-for="CurriculumId" />

            <div class="flex flex-wrap gap-4 mt-6">
                <button type="submit"
                        class="bg-gradient-to-r from-blue-500 to-blue-700 text-white px-6 py-3 rounded-lg hover:from-blue-600 hover:to-blue-800 transition w-full sm:w-auto shadow-lg">
                    <i class="fas fa-save mr-2"></i> บันทึกกิจกรรม
                </button>

                <a asp-action="CurriculumActivity" asp-controller="Academic" asp-route-id="@Model.CurriculumId"
                   class="bg-gray-500 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition w-full sm:w-auto shadow-md">
                    <i class="fas fa-arrow-left mr-2"></i> ย้อนกลับ
                </a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#activitySelect").select2({
                placeholder: "เลือกกิจกรรม...",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}
