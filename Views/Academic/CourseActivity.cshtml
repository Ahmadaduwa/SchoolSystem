@model SchoolSystem.Models.ViewModels.CourseActivityViewModel

<h2>กิจกรรมของหลักสูตร - @Model.CourseName</h2>

@if (Model.Activities.Any())
{
    <ul>
        @foreach (var activity in Model.Activities)
        {
            <li>
                <strong>@activity.ActivityName</strong> - @activity.Description
                <br />
                <small>สร้างเมื่อ: @activity.CreateAt.ToString("yyyy-MM-dd")</small>
            </li>
        }
    </ul>
}
else
{
    <p>ไม่มีข้อมูลกิจกรรม</p>
}
