@model SchoolSystem.Models.ViewModels.CurriculumActivityViewModel

@{
    ViewData["Title"] = "กิจกรรมของหลักสูตร";
}
@section Css {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
}

<div class="container mx-auto sm:px-6 lg:px-8 py-6">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <!-- Alert Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg shadow-md mb-4 flex items-center">
                <i class="fas fa-check-circle mr-2"></i>
                <span>@Html.Raw(TempData["SuccessMessage"])</span>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg shadow-md mb-4 flex items-center">
                <i class="fas fa-exclamation-circle mr-2"></i>
                <span>@Html.Raw(TempData["ErrorMessage"])</span>
            </div>
        }

        <!-- Header -->
        <div class="bg-blue-600 text-white px-6 py-4 flex flex-wrap items-center justify-between rounded-t-lg">
            <h1 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-0">
                <i class="fas fa-graduation-cap mr-2"></i> กิจกรรมของหลักสูตร: @Model.CurriculumName
            </h1>

            <div class="flex flex-wrap gap-4">
                <form method="get" asp-controller="Academic" asp-action="CurriculumActivity" asp-route-id="@Model.CurriculumId" class="flex flex-wrap items-center gap-4">
                    <!-- Sort Order -->
                    <select name="sortOrder" class="border px-3 py-2 rounded-lg bg-white text-gray-700 w-full sm:w-auto shadow-sm">
                        <option value="">เรียงลำดับ...</option>
                        <option value="CreateAtDesc">วันที่สร้าง (ใหม่ -> เก่า)</option>
                        <option value="CreateAtAsc">วันที่สร้าง (เก่า -> ใหม่)</option>
                        <option value="NameAsc">ชื่อกิจกรรม (A-Z)</option>
                        <option value="NameDesc">ชื่อกิจกรรม (Z-A)</option>
                    </select>

                    <button type="submit" class="bg-white text-blue-600 px-4 py-2 rounded-lg hover:bg-blue-50 shadow-md transition">
                        <i class="fas fa-search"></i> ค้นหา
                    </button>
                </form>

                <a asp-action="AddActivity" asp-controller="Academic" asp-route-id="@Model.CurriculumId"
                   class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition shadow-md">
                    <i class="fas fa-plus mr-2"></i> เพิ่มกิจกรรม
                </a>
            </div>
        </div>

        <!-- Activities List -->
        <div class="p-6">
            @if (Model.Activities != null && Model.Activities.Any())
            {
                <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var activity in Model.Activities)
                    {
                        <div class="bg-white border p-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300 relative">
                            <h2 class="text-lg font-semibold mb-2 text-blue-700"><i class="fas fa-calendar-alt"></i> @activity.ActivityName</h2>
                            <p class="text-sm text-gray-600 mb-4">@activity.Description</p>
                            <div class="text-xs text-gray-500 mb-4">
                                <span><i class="far fa-clock"></i> สร้างเมื่อ: @activity.CreateAt.ToString("yyyy-MM-dd")</span>
                            </div>

                            <!-- ปุ่มลบกิจกรรม -->
                            <form asp-action="DeleteActivity" asp-controller="Academic" method="post"
                                  onsubmit="return showDeleteConfirmation(event);">
                                <input type="hidden" name="activityId" value="@activity.ActivityId" />
                                <input type="hidden" name="CurriculumId" value="@Model.CurriculumId" />
                                <button type="submit" class="absolute top-4 right-4 bg-red-500 text-white px-3 py-2 rounded-lg hover:bg-red-700 transition shadow-md">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-gray-500 text-center py-6 text-lg">❌ ไม่มีข้อมูลกิจกรรม</p>
            }
        </div>

        <!-- Back Button -->
        <div class="px-6 py-4 bg-gray-100 flex justify-between items-center rounded-b-lg">
            <a asp-action="CurriculumManagement" asp-controller="Academic"
               class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition shadow-md">
                <i class="fas fa-arrow-left mr-2"></i> กลับไปหน้าหลักสูตร
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        function showDeleteConfirmation(event) {
            event.preventDefault();
            if (confirm('คุณแน่ใจหรือไม่ว่าต้องการลบกิจกรรมนี้?')) {
                event.target.submit();
            }
        }
    </script>
}