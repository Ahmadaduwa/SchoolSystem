@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> signInManager

<ul class="flex items-center space-x-4">
    @if (User.Identity.IsAuthenticated)
    {
        <li>
            Welcome, @User.Identity.Name!
            <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="text-white hover:bg-red-500 bg-red-600 px-4 py-2 rounded">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a href="account/login" class="text-blue-500 hover:underline">
                Login
            </a>
        </li>
        <li>
            <a href="account/register" class="text-blue-500 hover:underline">
                Register
            </a>
        </li>
    }
</ul>
