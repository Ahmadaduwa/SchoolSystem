@model SchoolSystem.Models.Assignment.Assignment
@{
    ViewData["Title"] = "เพิ่มงาน";
    var cmId = ViewBag.CM_Id;
    var Course = ViewBag.Course;
}

<div class="flex items-center justify-center py-8 px-4">
    <div class="w-full max-w-2xl bg-white p-8 rounded-lg shadow-lg border border-gray-100">
        <div class="mb-8 text-center">
            <h2 class="text-3xl font-bold text-gray-800">เพิ่มงานใหม่</h2>
            <p class="mt-2 text-gray-600">สำหรับวิชา: <span class="font-semibold text-blue-600">@Course</span></p>
        </div>

        <form asp-action="Create" method="post" class="w-full">
            <input type="hidden" name="CM_Id" value="@cmId" />

            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="Title">
                    หัวข้องาน <span class="text-red-500">*</span>
                </label>
                <input asp-for="Title"
                       class="shadow-sm appearance-none border border-gray-300 rounded-md w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                       placeholder="ระบุหัวข้องาน">
                <span asp-validation-for="Title" class="text-red-500 text-xs italic mt-1 block"></span>
            </div>

            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="Description">
                    คำอธิบายงาน
                </label>
                <textarea asp-for="Description"
                          class="shadow-sm appearance-none border border-gray-300 rounded-md w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                          placeholder="รายละเอียดงานที่มอบหมาย"
                          rows="4"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-xs italic mt-1 block"></span>
            </div>

            <div class="mb-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="FullScore">
                        คะแนนเต็ม <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <input asp-for="FullScore"
                               type="number"
                               step="0.01"
                               class="shadow-sm appearance-none border border-gray-300 rounded-md w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                               placeholder="0.00">
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                            <span class="text-gray-500">คะแนน</span>
                        </div>
                    </div>
                    <span asp-validation-for="FullScore" class="text-red-500 text-xs italic mt-1 block"></span>
                </div>
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="RealScore">
                        คะแนนจริง (% จาก 100%) <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <input asp-for="RealScore"
                               type="number"
                               step="0.01"
                               class="shadow-sm appearance-none border border-gray-300 rounded-md w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200"
                               placeholder="0.00">
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                            <span class="text-gray-500">%</span>
                        </div>
                    </div>
                    <p class="text-xs text-gray-500 mt-1">คะแนนจริงที่เหลือ: <span class="font-semibold text-blue-600">@ViewBag.RemainingRealScore %</span></p>
                    <span asp-validation-for="RealScore" class="text-red-500 text-xs italic mt-1 block"></span>
                </div>
            </div>

            <div class="mb-8 grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="AssignedDate">
                        วันที่มอบหมาย <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <input asp-for="AssignedDate"
                               type="date"
                               class="shadow-sm appearance-none border border-gray-300 rounded-md w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200">
                    </div>
                    <span asp-validation-for="AssignedDate" class="text-red-500 text-xs italic mt-1 block"></span>
                    <p class="text-xs text-gray-500 mt-1">รูปแบบ: เดือน/วัน/ปี ค.ศ.</p>
                </div>
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="DueDate">
                        วันครบกำหนดส่ง <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <input asp-for="DueDate"
                               type="date"
                               class="shadow-sm appearance-none border border-gray-300 rounded-md w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200">
                    </div>
                    <span asp-validation-for="DueDate" class="text-red-500 text-xs italic mt-1 block"></span>
                    <p class="text-xs text-gray-500 mt-1">รูปแบบ: เดือน/วัน/ปี ค.ศ.</p>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                <button type="submit"
                        class="w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200 transform hover:-translate-y-1">
                    <div class="flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        <span>บันทึกงาน</span>
                    </div>
                </button>
                <a href="@Url.Action("Index", "Assignment", new { cmId = cmId })"
                   class="w-full sm:w-auto bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 px-6 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2 transition duration-200 text-center">
                    <div class="flex items-center justify-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        <span>ยกเลิก</span>
                    </div>
                </a>
            </div>
        </form>
    </div>
</div>